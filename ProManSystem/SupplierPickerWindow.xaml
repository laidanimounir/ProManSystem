<Window x:Class="ProManSystem.Views.SupplierPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choisir un fournisseur" Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA">
    <Border Background="White" CornerRadius="8" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.1"
                              BlurRadius="15" ShadowDepth="3"/>
        </Border.Effect>

        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="🏭" FontSize="20" Margin="0,0,8,0"/>
                <StackPanel>
                    <TextBlock Text="Sélectionner un fournisseur"
                               FontSize="16" FontWeight="Bold"
                               Foreground="#2D3748"/>
                    <TextBlock Text="Tapez le code ou le nom pour filtrer."
                               FontSize="12" Foreground="#A0AEC0"/>
                </StackPanel>
            </StackPanel>

          
            <Border Grid.Row="2" Grid.RowSpan="1" Background="#F5F5F5"
                    BorderBrush="#E0E0E0" BorderThickness="1"
                    CornerRadius="6" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <TextBox x:Name="SearchTextBox"
                                     Height="30" Padding="28,0,8,0"/>
                            <TextBlock Text="🔍" FontSize="14"
                                       Foreground="#A0AEC0"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </Grid>

                        <Button Content="Rechercher"
                                Grid.Column="1"
                                Width="110" Margin="8,0,0,0"
                                Background="#3182CE" Foreground="White"
                                Click="SearchButton_Click"/>
                    </Grid>

                    
                    <DataGrid x:Name="SuppliersGrid"
                              Grid.Row="2"
                              Margin="0,5,0,0"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              BorderThickness="0"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#E2E8F0"
                              AlternatingRowBackground="#F7FAFC"
                              RowHeight="32"
                              MouseDoubleClick="SuppliersGrid_MouseDoubleClick">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D3748"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Padding" Value="10,6"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code" Binding="{Binding CodeFournisseur}" Width="80"/>
                            <DataGridTextColumn Header="Nom" Binding="{Binding Designation}" Width="200"/>
                            <DataGridTextColumn Header="Activité" Binding="{Binding Activite}" Width="140"/>
                            <DataGridTextColumn Header="Adresse" Binding="{Binding Adresse}" Width="*"/>
                            <DataGridTextColumn Header="Dette" Binding="{Binding Dette}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

           
            <StackPanel Grid.Row="3" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Annuler" Width="110" Margin="0,0,8,0"
                        Background="#A0AEC0" Foreground="White"
                        Click="CancelButton_Click"/>
                <Button Content="Sélectionner" Width="120"
                        Background="#38A169" Foreground="White"
                        Click="SelectButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
