<Window x:Class="ProManSystem.Views.ProductRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="وصفة المنتج"
        Height="520"
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA"
        FlowDirection="RightToLeft">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

       
        <TextBlock Grid.Row="0"
                   x:Name="ProductTitleTextBlock"
                   Text="وصفة المنتج"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="#333333"
                   Margin="0,0,0,15"
                   HorizontalAlignment="Right"/>

      
        <Border Grid.Row="1"
                Background="#FFFDE7"
                BorderBrush="#FFECB3"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8"
                Margin="0,0,0,10">
            <TextBlock Text="أضف المواد الأولية وكمياتها اللازمة لإنتاج وحدة واحدة من هذا المنتج."
                       Foreground="#795548"
                       FontSize="13"
                       TextWrapping="Wrap"/>
        </Border>

       
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="6"
                Padding="8"
                BorderBrush="#DDDDDD"
                BorderThickness="1">
            <DataGrid x:Name="RecipeGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      HeadersVisibility="Column"
                      AlternatingRowBackground="#F5F5F5"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#E0E0E0"
                      RowHeight="36"
                      ColumnHeaderHeight="38"
                      FontSize="14">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#F0F0F0"/>
                        <Setter Property="Foreground" Value="#333333"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                   
                    <DataGridComboBoxColumn Header="المادة الأولية"
                                            Width="*"
                                            SelectedValueBinding="{Binding RawMaterialId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            DisplayMemberPath="Designation"
                                            SelectedValuePath="Id"
                                            />

                  
                    <DataGridTextColumn Header="الكمية اللازمة"
                                        Binding="{Binding QuantiteNecessaire, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N3}"
                                        Width="150"/>

                   
                    <DataGridTemplateColumn Header="إزالة" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="حذف"
                                        Width="60"
                                        Height="26"
                                        Background="#F44336"
                                        Foreground="White"
                                        Cursor="Hand"
                                        Click="DeleteRowButton_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        
        <DockPanel Grid.Row="3"
                   Margin="0,12,0,0"
                   LastChildFill="False">
            <Button Content="إضافة سطر"
                    Width="110"
                    Height="34"
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    Cursor="Hand"
                    Click="AddRowButton_Click"
                    DockPanel.Dock="Right"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <Button Content="حفظ"
                        Width="120"
                        Height="34"
                        Margin="0,0,10,0"
                        Background="#2196F3"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="SaveButton_Click"/>

                <Button Content="إغلاق"
                        Width="100"
                        Height="34"
                        Background="#9E9E9E"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
