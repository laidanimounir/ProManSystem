<UserControl x:Class="ProManSystem.Views.RawMaterialsEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#38A169"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <TabControl>
            
            <TabItem Header="Ajouter / Recherche" FontSize="13" FontWeight="SemiBold">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        
                        <Border Grid.Row="0" Background="White"
                                BorderBrush="#E0E0E0" BorderThickness="1"
                                CornerRadius="8" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000"
                                                  Opacity="0.08"
                                                  BlurRadius="12"
                                                  ShadowDepth="2"/>
                            </Border.Effect>

                            <StackPanel>
                                
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="50" Height="50" Background="#C6F6D5"
                                            CornerRadius="25" Margin="0,0,15,0">
                                        <TextBlock Text="🧵" FontSize="26"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Nouvelle matière première"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Foreground="#2F855A"/>
                                        <TextBlock Text="Ajoutez une matière utilisée dans la production."
                                                   FontSize="12"
                                                   Foreground="#718096"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>

                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="260"/>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="Code matière :" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="CodeMatiereTextBox"
                                             Grid.Row="0" Grid.Column="1"
                                             Width="150" HorizontalAlignment="Left"
                                             IsReadOnly="True" Background="#F7FAFC"
                                             Style="{StaticResource ModernTextBox}"/>

                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                               Text="Désignation :" Style="{StaticResource FieldLabel}"/>
                                    <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3">
                                        <TextBox x:Name="DesignationTextBox"
                                                 Style="{StaticResource ModernTextBox}"/>
                                        <TextBlock Text="Ex: CUIR SYNTHETIQUE, DOUBLURE..."
                                                   Foreground="#A0AEC0" FontStyle="Italic"
                                                   FontSize="12" Margin="10,0,0,0"
                                                   IsHitTestVisible="False"
                                                   VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=DesignationTextBox, Path=Text}"
                                                                     Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>

                                   
                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                               Text="Unité :" Style="{StaticResource FieldLabel}"/>
                                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                                        <ComboBox x:Name="UnitComboBox"
                                                  Width="160"
                                                  Style="{StaticResource ModernComboBox}"/>
                                        <Button Content="+"
                                                Width="32" Margin="8,0,0,0"
                                                Background="#38A169"
                                                Click="AddUnitButton_Click"
                                                Style="{StaticResource ModernButton}"/>
                                    </StackPanel>

                                   
                                    <TextBlock Grid.Row="3" Grid.Column="0"
                                               Text="Stock initial :" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="StockInitialTextBox"
                                             Grid.Row="3" Grid.Column="1"
                                             Width="120" HorizontalAlignment="Left"
                                             Style="{StaticResource ModernTextBox}"/>

                                    
                                    <TextBlock Grid.Row="3" Grid.Column="2"
                                               Text="Stock min :" Style="{StaticResource FieldLabel}"
                                               Margin="20,0,0,6"/>
                                    <TextBox x:Name="StockMinTextBox"
                                             Grid.Row="3" Grid.Column="3"
                                             Width="120" HorizontalAlignment="Left"
                                             Style="{StaticResource ModernTextBox}"/>

                                   
                                    <TextBlock Grid.Row="4" Grid.Column="0"
                                               Text="PMAPA (DA) :" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="PMAPATextBox"
                                             Grid.Row="4" Grid.Column="1"
                                             Width="120" HorizontalAlignment="Left"
                                             IsReadOnly="True" Background="#F7FAFC"
                                             Text="0.00"
                                             Style="{StaticResource ModernTextBox}"/>

                                    
                                    <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4"
                                                Orientation="Horizontal" Margin="0,15,0,0">
                                        <Button x:Name="NewMaterialButton"
                                                Content="➕ Nouveau"
                                                Width="110" Margin="0,0,10,0"
                                                Background="#4CAF50"
                                                Click="NewMaterialButton_Click"
                                                Style="{StaticResource ModernButton}"/>
                                        <Button x:Name="SaveMaterialButton"
                                                Content="💾 Enregistrer"
                                                Width="130"
                                                Background="#38A169"
                                                Click="SaveMaterialButton_Click"
                                                Style="{StaticResource ModernButton}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        
                        <Border Grid.Row="2" Background="White"
                                BorderBrush="#E0E0E0" BorderThickness="1"
                                CornerRadius="8" Padding="16">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.08"
                                                  BlurRadius="12" ShadowDepth="2"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                
                                <Border Grid.Row="0" Background="#F5F5F5"
                                        BorderBrush="#E0E0E0" BorderThickness="1"
                                        CornerRadius="6" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <TextBox x:Name="SearchTextBox"
                                                     Height="30" Padding="28,0,8,0"
                                                     Style="{StaticResource ModernTextBox}"/>
                                            <TextBlock Text="🔍" FontSize="14"
                                                       Foreground="#A0AEC0"
                                                       IsHitTestVisible="False"
                                                       VerticalAlignment="Center"
                                                       Margin="8,0,0,0"/>
                                        </Grid>

                                        <Button Content="Rechercher"
                                                Width="110" Margin="10,0,0,0"
                                                Background="#38A169"
                                                Click="SearchButton_Click"
                                                Grid.Column="1"
                                                Style="{StaticResource ModernButton}"/>
                                    </Grid>
                                </Border>

                               
                                <DataGrid x:Name="RawMaterialsGrid"
                                          Grid.Row="2"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          SelectionMode="Single"
                                          BorderThickness="0"
                                          GridLinesVisibility="Horizontal"
                                          HorizontalGridLinesBrush="#E2E8F0"
                                          AlternatingRowBackground="#F7FAFC"
                                          RowHeight="34">

                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="FontSize" Value="12.5"/>
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#EDFDFD"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#C6F6D5"/>
                                                    <Setter Property="Foreground" Value="#22543D"/>
                                                </Trigger>
                                                
                                                <DataTrigger Binding="{Binding StockActuel}" Value="0">
                                                    <Setter Property="Foreground" Value="#C53030"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>

                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#2D3748"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="Padding" Value="10,6"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Code" Binding="{Binding CodeMatiere}" Width="80"/>
                                        <DataGridTextColumn Header="Désignation" Binding="{Binding Designation}" Width="200"/>
                                        <DataGridTextColumn Header="Unité" Binding="{Binding Unit.Nom}" Width="90"/>
                                        <DataGridTextColumn Header="Stock actuel" Binding="{Binding StockActuel}" Width="100"/>
                                        <DataGridTextColumn Header="Stock min" Binding="{Binding StockMin}" Width="90"/>
                                        <DataGridTextColumn Header="PMAPA" Binding="{Binding PMAPA}" Width="90"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            
            <TabItem Header="Gestion / Détails" FontSize="13" FontWeight="SemiBold" Height="23" Margin="-2,-2,-2,0" VerticalAlignment="Top">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    
                    <Border Grid.Row="0" Background="White"
                            BorderBrush="#E0E0E0" BorderThickness="1"
                            CornerRadius="8" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="ManageSearchTextBox"
                                     Height="30" Margin="0,0,10,0"
                                     Style="{StaticResource ModernTextBox}"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="Rechercher"
                                        Width="110" Margin="0,0,10,0"
                                        Background="#38A169"
                                        Click="ManageSearchButton_Click"
                                        Style="{StaticResource ModernButton}"/>
                                <Button Content="✏️ Modifier"
                                        Width="110"
                                        Background="#2F855A"
                                        Click="OpenEditDialogButton_Click"
                                        Style="{StaticResource ModernButton}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    
                    <Border Grid.Row="2" Background="White"
                            BorderBrush="#E0E0E0" BorderThickness="1"
                            CornerRadius="8" Padding="16">
                        <DataGrid x:Name="ManageRawMaterialsGrid"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  SelectionMode="Single"
                                  BorderThickness="0"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#E2E8F0"
                                  AlternatingRowBackground="#F7FAFC"
                                  RowHeight="34">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#2D3748"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Padding" Value="10,6"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Code" Binding="{Binding CodeMatiere}" Width="80"/>
                                <DataGridTextColumn Header="Désignation" Binding="{Binding Designation}" Width="220"/>
                                <DataGridTextColumn Header="Unité" Binding="{Binding Unit.Nom}" Width="90"/>
                                <DataGridTextColumn Header="Stock actuel" Binding="{Binding StockActuel}" Width="100"/>
                                <DataGridTextColumn Header="Stock min" Binding="{Binding StockMin}" Width="90"/>
                                <DataGridTextColumn Header="PMAPA" Binding="{Binding PMAPA}" Width="90"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
