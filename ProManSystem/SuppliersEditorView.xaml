<UserControl x:Class="ProManSystem.Views.SuppliersEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF9800"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>

       
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <TabControl>

            <TabItem Header="Ajouter / Recherche" FontSize="13" FontWeight="SemiBold" Height="23" Margin="-2,-2,-2,0" VerticalAlignment="Top">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="500"/>
                        </Grid.RowDefinitions>

                        
                        <Border Grid.Row="0" Background="White" 
                                BorderBrush="#E0E0E0" BorderThickness="1" 
                                CornerRadius="8" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.08" 
                                                  BlurRadius="12" ShadowDepth="2"/>
                            </Border.Effect>

                            <StackPanel>
                                
                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="50" Height="50" Background="#FFF3E0" 
                                            CornerRadius="25" Margin="0,0,15,0">
                                        <TextBlock Text="🏭" FontSize="26" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Nouveau fournisseur" FontSize="18" 
                                                   FontWeight="Bold" Foreground="#FF6F00"/>
                                        <TextBlock Text="Remplissez les informations du fournisseur" 
                                                   FontSize="12" Foreground="#757575" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>

                               
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="280"/>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    
                                    <TextBlock Text="Code fournisseur :" Grid.Row="0" Grid.Column="0" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="CodeFournisseurTextBox" Grid.Row="0" Grid.Column="1"
                                             Width="180" HorizontalAlignment="Left"
                                             IsReadOnly="True" Background="#FAFAFA"
                                             Style="{StaticResource ModernTextBox}"/>

                                    
                                    <TextBlock Text="Désignation :" Grid.Row="1" Grid.Column="0" Style="{StaticResource FieldLabel}"/>
                                    <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3">
                                        <TextBox x:Name="DesignationTextBox" Style="{StaticResource ModernTextBox}"/>
                                        <TextBlock Text="Ex: ENIEM, Sonelgaz, Naftal..." 
                                                   Foreground="#AAAAAA" FontStyle="Italic" FontSize="12"
                                                   IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=DesignationTextBox, Path=Text}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>

                                    
                                    <TextBlock Text="Activité :" Grid.Row="2" Grid.Column="0" Style="{StaticResource FieldLabel}"/>
                                    <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3">
                                        <TextBox x:Name="ActiviteTextBox" Style="{StaticResource ModernTextBox}"/>
                                        <TextBlock Text="Ex: Fourniture électrique, Import/Export..." 
                                                   Foreground="#AAAAAA" FontStyle="Italic" FontSize="12"
                                                   IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=ActiviteTextBox, Path=Text}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>

                                    
                                    <TextBlock Text="Adresse :" Grid.Row="3" Grid.Column="0" Style="{StaticResource FieldLabel}"/>
                                    <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3">
                                        <TextBox x:Name="AdresseTextBox" Style="{StaticResource ModernTextBox}"/>
                                        <TextBlock Text="Ex: Zone industrielle, Route nationale..." 
                                                   Foreground="#AAAAAA" FontStyle="Italic" FontSize="12"
                                                   IsHitTestVisible="False" VerticalAlignment="Center" Margin="10,0,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=AdresseTextBox, Path=Text}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>

                                   
                                    <TextBlock Text="N° RC :" Grid.Row="4" Grid.Column="0" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="RcTextBox" Grid.Row="4" Grid.Column="1"
                                             Width="220" HorizontalAlignment="Left"
                                             Style="{StaticResource ModernTextBox}"/>

                                    
                                    <TextBlock Text="Matricule fiscal :" Grid.Row="5" Grid.Column="0" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="MatriculeTextBox" Grid.Row="5" Grid.Column="1"
                                             Width="220" HorizontalAlignment="Left"
                                             Style="{StaticResource ModernTextBox}"/>

                                   
                                    <TextBlock Text="Type ident. :" Grid.Row="6" Grid.Column="0" Style="{StaticResource FieldLabel}"/>
                                    <ComboBox x:Name="TypeIdComboBox" Grid.Row="6" Grid.Column="1"
                                              Width="160" HorizontalAlignment="Left"
                                              Style="{StaticResource ModernComboBox}">
                                        <ComboBoxItem Content="Article"/>
                                        <ComboBoxItem Content="BP"/>
                                    </ComboBox>

                                    <TextBlock Text="N° ident. :" Grid.Row="6" Grid.Column="2" 
                                               Margin="20,0,12,0" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="NumeroIdTextBox" Grid.Row="6" Grid.Column="3"
                                             Style="{StaticResource ModernTextBox}"/>

                                   
                                    <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="4"
                                                Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button x:Name="NewSupplierButton" Content="➕ Nouveau" 
                                                Width="110" Margin="0,0,12,0"
                                                Background="#4CAF50"
                                                Click="NewSupplierButton_Click"
                                                Style="{StaticResource ModernButton}"/>
                                        <Button x:Name="SaveSupplierButton" Content="💾 Enregistrer" 
                                                Width="130"
                                                Background="#FF9800"
                                                Click="SaveSupplierButton_Click"
                                                Style="{StaticResource ModernButton}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                       
                        <Border Grid.Row="2" Background="White"
                                BorderBrush="#E0E0E0" BorderThickness="1"
                                CornerRadius="8" Padding="16">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.08"
                                                  BlurRadius="12" ShadowDepth="2"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                               
                                <Border Grid.Row="0" Background="#F5F5F5" 
                                        BorderBrush="#E0E0E0" BorderThickness="1"
                                        CornerRadius="6" Padding="12,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                       
                                        <Grid Grid.Column="0">
                                            <TextBox x:Name="SearchTextBox" Height="32" Padding="35,0,8,0"
                                                     Style="{StaticResource ModernTextBox}"/>
                                            <TextBlock Text="🔍" FontSize="16" Foreground="#AAAAAA"
                                                       IsHitTestVisible="False"
                                                       VerticalAlignment="Center" Margin="10,0,0,0"/>
                                        </Grid>

                                        <Button Grid.Column="1" Content="Rechercher" 
                                                Width="110" Margin="12,0,0,0" Background="#FF9800"
                                                Click="SearchButton_Click"
                                                Style="{StaticResource ModernButton}"/>
                                    </Grid>
                                </Border>

                              
                                <DataGrid x:Name="SuppliersGrid" Grid.Row="2"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          SelectionMode="Single"
                                          BorderThickness="0"
                                          GridLinesVisibility="Horizontal"
                                          HorizontalGridLinesBrush="#F0F0F0"
                                          AlternatingRowBackground="#FAFAFA"
                                          RowHeight="38"
                                          SelectionChanged="SuppliersGrid_SelectionChanged">

                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="White"/>
                                            <Setter Property="FontSize" Value="12.5"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFF3E0"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FFE0B2"/>
                                                    <Setter Property="Foreground" Value="#E65100"/>
                                                </Trigger>
                                                <DataTrigger Binding="{Binding EstActif}" Value="False">
                                                    <Setter Property="Background" Value="#FFCDD2"/>
                                                    <Setter Property="Foreground" Value="#C62828"/>
                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>

                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#37474F"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="Padding" Value="12,10"/>
                                            <Setter Property="BorderBrush" Value="#263238"/>
                                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>

                                    <DataGrid.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="12,0"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="DataGridCell">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DataGrid.CellStyle>

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Code" Binding="{Binding CodeFournisseur}" Width="85"/>
                                        <DataGridTextColumn Header="Désignation" Binding="{Binding Designation}" Width="160"/>
                                        <DataGridTextColumn Header="Activité" Binding="{Binding Activite}" Width="110"/>
                                        <DataGridTextColumn Header="Adresse" Binding="{Binding Adresse}" Width="210"/>
                                        <DataGridTextColumn Header="N° RC" Binding="{Binding NumeroRC}" Width="120"/>
                                        <DataGridTextColumn Header="Matricule fiscal" Binding="{Binding MatriculeFiscal}" Width="130"/>
                                        <DataGridTextColumn Header="Type ID" Binding="{Binding TypeIdentification}" Width="85"/>
                                        <DataGridTextColumn Header="N° ID" Binding="{Binding NumeroIdentification}" Width="120"/>
                                        <DataGridTextColumn Header="Total Achats" Binding="{Binding TotalAchats}" Width="110"/>
                                        <DataGridTextColumn Header="Dette" Binding="{Binding Dette}" Width="90"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </TabItem>

           
            <TabItem Header="Gestion / Détails" FontSize="13" FontWeight="SemiBold">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                  
                    <Border Grid.Row="0" Background="White" 
                            BorderBrush="#E0E0E0" BorderThickness="1"
                            CornerRadius="8" Padding="16">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.08" 
                                              BlurRadius="12" ShadowDepth="2"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Width="32" Height="32" Background="#FF9800" 
                                    CornerRadius="16" Margin="0,0,12,0">
                                <TextBlock Text="🔍" FontSize="16" Foreground="White"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <TextBox x:Name="ManageSearchTextBox" Grid.Column="1"
                                     Height="32" Margin="0,0,12,0"
                                     Style="{StaticResource ModernTextBox}"/>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="Rechercher" Width="110" Margin="0,0,12,0"
                                        Background="#FF9800"
                                        Click="ManageSearchButton_Click"
                                        Style="{StaticResource ModernButton}"/>
                                <Button Content="✏️ Modifier" Width="130"
                                        Background="#FF6F00"
                                        Click="OpenEditDialogButton_Click"
                                        Style="{StaticResource ModernButton}"/>
                                <Button Content="🖨 Carte" Width="122"
            Background="#4CAF50"
            Click="OpenCardButton_Click"
            Style="{StaticResource ModernButton}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Row="2" Background="White"
                            BorderBrush="#E0E0E0" BorderThickness="1"
                            CornerRadius="8" Padding="16">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.08"
                                              BlurRadius="12" ShadowDepth="2"/>
                        </Border.Effect>

                        <DataGrid x:Name="ManageSuppliersGrid"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  SelectionMode="Single"
                                  BorderThickness="0"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#F0F0F0"
                                  AlternatingRowBackground="#FAFAFA"
                                  RowHeight="38">

                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="FontSize" Value="12.5"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFF3E0"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#FFE0B2"/>
                                            <Setter Property="Foreground" Value="#E65100"/>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding EstActif}" Value="False">
                                            <Setter Property="Background" Value="#FFCDD2"/>
                                            <Setter Property="Foreground" Value="#C62828"/>
                                            <Setter Property="FontStyle" Value="Italic"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#37474F"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="Padding" Value="12,10"/>
                                    <Setter Property="BorderBrush" Value="#263238"/>
                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="12,0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="DataGridCell">
                                                <Border Background="{TemplateBinding Background}" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Code" Binding="{Binding CodeFournisseur}" Width="85"/>
                                <DataGridTextColumn Header="Désignation" Binding="{Binding Designation}" Width="160"/>
                                <DataGridTextColumn Header="Activité" Binding="{Binding Activite}" Width="110"/>
                                <DataGridTextColumn Header="Adresse" Binding="{Binding Adresse}" Width="210"/>
                                <DataGridTextColumn Header="N° RC" Binding="{Binding NumeroRC}" Width="120"/>
                                <DataGridTextColumn Header="Matricule fiscal" Binding="{Binding MatriculeFiscal}" Width="130"/>
                                <DataGridTextColumn Header="Type ID" Binding="{Binding TypeIdentification}" Width="85"/>
                                <DataGridTextColumn Header="N° ID" Binding="{Binding NumeroIdentification}" Width="120"/>
                                <DataGridTextColumn Header="Total Achats" Binding="{Binding TotalAchats}" Width="110"/>
                                <DataGridTextColumn Header="Dette" Binding="{Binding Dette}" Width="90"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>

</UserControl>
