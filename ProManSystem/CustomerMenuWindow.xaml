<Window x:Class="ProManSystem.CustomerMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clients - Menu"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Gestion des clients"
                   FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <Button Content="Manage customers"
                Height="40" Margin="0,0,0,10"
                Click="ManageCustomersButton_Click"/>

        <Button Content="Search customers"
                Height="40" Margin="0,0,0,10"
                Click="SearchCustomersButton_Click"/>

       

        <Button Content="← Back to home"
                Height="40" Margin="0,20,0,0"
                Click="BackButton_Click"/>
    </StackPanel>
</Window>
