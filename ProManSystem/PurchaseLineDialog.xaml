<Window x:Class="ProManSystem.Views.PurchaseLineDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter une ligne" Height="289" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA">
    <Border Background="White" CornerRadius="8" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.1"
                              BlurRadius="12" ShadowDepth="3"/>
        </Border.Effect>

        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

           
            <TextBlock Grid.Row="0"
                       Text="Ajouter une matière à la facture"
                       FontSize="16" FontWeight="Bold"
                       Foreground="#2D3748"/>

            
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                
                <TextBlock Text="Matière :" Grid.Row="0" Grid.Column="0"
                           VerticalAlignment="Center"/>
                <ComboBox x:Name="MaterialComboBox"
                          Grid.Row="0" Grid.Column="1"
                          DisplayMemberPath="Designation"
                          SelectedValuePath="Id"
                          Margin="0,4,0,4" SelectionChanged="MaterialComboBox_SelectionChanged"/>

              
                <TextBlock Text="Quantité :" Grid.Row="1" Grid.Column="0"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="QuantiteTextBox"
                         Grid.Row="1" Grid.Column="1"
                         Margin="0,4,0,4"/>

              
                <TextBlock Text="Prix unitaire :" Grid.Row="2" Grid.Column="0"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="PrixTextBox"
                         Grid.Row="2" Grid.Column="1"
                         Margin="0,4,0,4"/>

                
                <TextBlock Text="Total ligne :" Grid.Row="3" Grid.Column="0"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="TotalTextBox"
                         Grid.Row="3" Grid.Column="1"
                         IsReadOnly="True"
                         Background="#EDF2F7"
                         Margin="0,4,0,4"/>
            </Grid>

           
            <StackPanel Grid.Row="3" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Annuler" Width="110" Margin="0,0,8,0"
                        Background="#A0AEC0" Foreground="White"
                        Click="CancelButton_Click"/>
                <Button Content="Ajouter" Width="120"
                        Background="#38A169" Foreground="White"
                        Click="AddButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
