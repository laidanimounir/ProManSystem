<UserControl x:Class="ProManSystem.Views.SalesInvoicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FAFAFA"
             FlowDirection="RightToLeft">

    <UserControl.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="#CBD5E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#4299E1"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SmallButton" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <!-- القسم الأيسر: إنشاء الفاتورة -->
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="10"/>
            <!-- القسم الأيمن: المنتجات والوصفة -->
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- ============================================ -->
        <!-- القسم الأيسر: إنشاء الفاتورة -->
        <!-- ============================================ -->
        <Border Grid.Column="0"
                Background="White"
                CornerRadius="8"
                Padding="15"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.08"
                                  BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- العنوان -->
                    <TextBlock Grid.Row="0"
                               Text="💰 فاتورة بيع جديدة"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#333333"
                               Margin="0,0,0,15"
                               HorizontalAlignment="Right"/>

                    <!-- معلومات الفاتورة -->
                    <Border Grid.Row="1"
                            Background="#F9F9F9"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,0,0,12"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="📋 معلومات الفاتورة"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="#4299E1"
                                       Margin="0,0,0,10"/>

                            <!-- رقم الفاتورة -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="رقم الفاتورة:"
                                           Width="100"
                                           VerticalAlignment="Center"
                                           FontSize="12"/>
                                <TextBox x:Name="NumeroFactureTextBox"
                                         Width="150"
                                         IsReadOnly="True"
                                         Background="#EDF2F7"
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- التاريخ -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="التاريخ:"
                                           Width="100"
                                           VerticalAlignment="Center"
                                           FontSize="12"/>
                                <DatePicker x:Name="DateFacturePicker"
                                            Width="150"
                                            Height="32"/>
                            </StackPanel>

                            <!-- TVA -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <TextBlock Text="TVA (%):"
                                           Width="100"
                                           VerticalAlignment="Center"
                                           FontSize="12"/>
                                <ComboBox x:Name="TvaComboBox"
                                          Width="150"
                                          Height="32"
                                          IsEditable="True"
                                          SelectionChanged="TvaComboBox_SelectionChanged"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- اختيار الزبون -->
                    <Border Grid.Row="2"
                            Background="#FFF5E6"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,0,0,12"
                            BorderBrush="#FFB84D"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="👤 الزبون"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="#E67E00"
                                       Margin="0,0,0,10"/>

                            <TextBox x:Name="CustomerTextBox"
                                     Height="32"
                                     IsReadOnly="True"
                                     Background="#FFFFFF"
                                     Margin="0,0,0,8"
                                     Style="{StaticResource ModernTextBox}"/>

                            <Button x:Name="PickCustomerButton"
                                    Content="اختيار زبون"
                                    Width="150"
                                    Background="#FF9800"
                                    HorizontalAlignment="Right"
                                    Click="PickCustomerButton_Click"
                                    Style="{StaticResource ModernButton}"/>
                        </StackPanel>
                    </Border>

                    <!-- جدول المنتجات المضافة -->
                    <Border Grid.Row="3"
                            Background="#F0F4F8"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,0,0,12"
                            BorderBrush="#90CAF9"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="📦 المنتجات في الفاتورة"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="#1976D2"
                                       Margin="0,0,0,10"/>

                            <DataGrid x:Name="InvoiceLinesGrid"
                                      Height="250"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      CanUserAddRows="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      FontSize="11"
                                      RowHeight="32"
                                      ColumnHeaderHeight="34"
                                      BorderThickness="1"
                                      BorderBrush="#E0E0E0"
                                      Margin="0,0,0,8">

                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#1976D2"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="Padding" Value="8,5"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="المنتج"
                                                        Binding="{Binding Product.Nom}"
                                                        Width="*"/>

                                    <DataGridTextColumn Header="الكمية"
                                                        Binding="{Binding Quantite, StringFormat=N2}"
                                                        Width="70"/>

                                    <DataGridTextColumn Header="السعر"
                                                        Binding="{Binding PrixUnitaire, StringFormat=N2}"
                                                        Width="80"/>

                                    <DataGridTextColumn Header="المجموع"
                                                        Binding="{Binding MontantLigne, StringFormat=N2}"
                                                        Width="90"/>

                                    <DataGridTemplateColumn Header="حذف" Width="50">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="🗑️"
                                                        Width="36"
                                                        Height="24"
                                                        Background="#F44336"
                                                        Foreground="White"
                                                        FontSize="11"
                                                        Cursor="Hand"
                                                        BorderThickness="0"
                                                        Click="DeleteLineButton_Click"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>

                    <!-- الإجماليات والحفظ -->
                    <Border Grid.Row="4"
                            Background="#E8F5E9"
                            CornerRadius="6"
                            Padding="12"
                            BorderBrush="#4CAF50"
                            BorderThickness="2">
                        <StackPanel>
                            <TextBlock Text="💵 الإجماليات"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="#2E7D32"
                                       Margin="0,0,0,10"/>

                            <!-- المجموع HT -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="المجموع HT:"
                                           Width="120"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                                <TextBox x:Name="MontantHTTextBox"
                                         Width="150"
                                         IsReadOnly="True"
                                         Background="#EDF2F7"
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- TVA -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <TextBlock Text="TVA:"
                                           Width="120"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                                <TextBox x:Name="MontantTVATextBox"
                                         Width="150"
                                         IsReadOnly="True"
                                         Background="#EDF2F7"
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- المجموع TTC -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="المجموع TTC:"
                                           Width="120"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                                <TextBox x:Name="MontantTTCTextBox"
                                         Width="150"
                                         IsReadOnly="True"
                                         Background="#4CAF50"
                                         Foreground="White"
                                         FontWeight="Bold"
                                         FontSize="14"
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- أزرار -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="SaveInvoiceButton"
                                        Content="💾 حفظ الفاتورة"
                                        Width="140"
                                        Background="#4CAF50"
                                        Margin="0,0,10,0"
                                        Click="SaveInvoiceButton_Click"
                                        Style="{StaticResource ModernButton}"/>

                                <Button x:Name="ClearButton"
                                        Content="🔄 مسح"
                                        Width="100"
                                        Background="#9E9E9E"
                                        Click="ClearButton_Click"
                                        Style="{StaticResource ModernButton}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- فاصل -->
        <GridSplitter Grid.Column="1"
                      Width="10"
                      HorizontalAlignment="Stretch"
                      Background="Transparent"
                      ShowsPreview="False"/>

        <!-- ============================================ -->
        <!-- القسم الأيمن: المنتجات والوصفة -->
        <!-- ============================================ -->
        <Border Grid.Column="2"
                Background="White"
                CornerRadius="8"
                Padding="15"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.08"
                                  BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- العنوان -->
                <TextBlock Grid.Row="0"
                           Text="🛒 المنتجات المتاحة"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#333333"
                           Margin="0,0,0,15"
                           HorizontalAlignment="Right"/>

              
                <Border Grid.Row="1"
                        Background="#FFFEF7"
                        CornerRadius="6"
                        Padding="12"
                        BorderBrush="#FFD54F"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="اختر منتج لإضافته للفاتورة (انقر مرتين)"
                                   FontSize="12"
                                   Foreground="#F57C00"
                                   Margin="0,0,0,8"/>

                        <DataGrid x:Name="AvailableProductsGrid"
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  FontSize="11"
                                  RowHeight="32"
                                  ColumnHeaderHeight="34"
                                  BorderThickness="1"
                                  BorderBrush="#E0E0E0"
                                  SelectionChanged="AvailableProductsGrid_SelectionChanged"
                                  MouseDoubleClick="AvailableProductsGrid_MouseDoubleClick">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F57C00"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="Padding" Value="8,5"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="كود"
                                                    Binding="{Binding CodeProduit}"
                                                    Width="80"/>

                                <DataGridTextColumn Header="اسم المنتج"
                                                    Binding="{Binding Nom}"
                                                    Width="*"/>

                                <DataGridTextColumn Header="السعر"
                                                    Binding="{Binding PrixVente, StringFormat=N2}"
                                                    Width="80"/>

                                <DataGridTextColumn Header="أقصى كمية"
                                                    Binding="{Binding MaxQuantity, StringFormat=N0}"
                                                    Width="90"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

          
                <Border Grid.Row="3"
                        Background="#F0F4F8"
                        CornerRadius="6"
                        Padding="12"
                        BorderBrush="#90CAF9"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   x:Name="RecipeHeaderTextBlock"
                                   Text="📋 وصفة المنتج (اختر منتج من القائمة)"
                                   FontSize="13"
                                   FontWeight="Bold"
                                   Foreground="#1976D2"
                                   Margin="0,0,0,10"/>

                        <DataGrid x:Name="ProductRecipeGrid"
                                  Grid.Row="1"
                                  Height="200"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  FontSize="11"
                                  RowHeight="30"
                                  ColumnHeaderHeight="32"
                                  BorderThickness="1"
                                  BorderBrush="#E0E0E0">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#1976D2"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="Padding" Value="8,5"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="المادة الأولية"
                                                    Binding="{Binding RawMaterialName}"
                                                    Width="*"/>

                                <DataGridTextColumn Header="الكمية للوحدة"
                                                    Binding="{Binding QuantityPerUnit, StringFormat=N3}"
                                                    Width="110"/>

                                <DataGridTextColumn Header="المخزون المتوفر"
                                                    Binding="{Binding AvailableStock, StringFormat=N2}"
                                                    Width="110"/>

                                <DataGridTextColumn Header="أقصى وحدات"
                                                    Binding="{Binding MaxUnits, StringFormat=N0}"
                                                    Width="90"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
