<UserControl x:Class="ProManSystem.Views.SalesInvoicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8FAFC"
             FlowDirection="LeftToRight">

    <UserControl.Resources>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CBD5E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#1E3A8A"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

   
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#059669"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#64748B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#475569"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F59E0B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D97706"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08"
                                      BlurRadius="12" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

       
        <Border Grid.Row="0" Background="#1E3A8A" Padding="20,15">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🧾" FontSize="28" Margin="0,0,10,0"/>
                    <TextBlock Text="Facturation de Vente" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="👤 Administrateur" 
                               FontSize="13" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                </StackPanel>
            </Grid>
        </Border>

       
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Style="{StaticResource Card}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                       
                        <Border Background="#F8FAFC"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16"
                                BorderBrush="#E2E8F0"
                                BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                                           Text="📋 Informations de la Facture"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#1E293B"
                                           Margin="0,0,0,15"/>

                               
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,12">
                                    <TextBlock Text="N° Facture"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#64748B"
                                               Margin="0,0,0,6"/>
                                    <TextBox x:Name="NumeroFactureTextBox"
                                             IsReadOnly="True"
                                             Background="#EDF2F7"
                                             Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,12">
                                    <TextBlock Text="Date"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#64748B"
                                               Margin="0,0,0,6"/>
                                    <DatePicker x:Name="DateFacturePicker"
                                                Height="38"
                                                VerticalContentAlignment="Center"/>
                                </StackPanel>

                              
                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,0">
                                    <TextBlock Text="Taux TVA (%)"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#64748B"
                                               Margin="0,0,0,6"/>
                                    <ComboBox x:Name="TvaComboBox"
                                              Height="38"
                                              IsEditable="True"
                                              VerticalContentAlignment="Center"
                                              SelectionChanged="TvaComboBox_SelectionChanged"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                     
                        <Border Background="#FFFBEB"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16"
                                BorderBrush="#F59E0B"
                                BorderThickness="2">
                            <StackPanel>
                                <TextBlock Text="👤 Client"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#D97706"
                                           Margin="0,0,0,12"/>

                                <TextBox x:Name="CustomerTextBox"
                                         IsReadOnly="True"
                                         Background="White"
                                         Margin="0,0,0,10"
                                         Style="{StaticResource ModernTextBox}"/>

                                <Button x:Name="PickCustomerButton"
                                        Content="🔍 Choisir un Client"
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource WarningButton}"
                                        Click="PickCustomerButton_Click"/>
                            </StackPanel>
                        </Border>

                      
                        <Border Background="White"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16"
                                BorderBrush="#3B82F6"
                                BorderThickness="2">
                            <StackPanel>
                                <TextBlock Text="📦 Articles de la Facture"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#1E40AF"
                                           Margin="0,0,0,12"/>

                                <DataGrid x:Name="InvoiceLinesGrid"
                                          Height="250"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="Horizontal"
                                          HorizontalGridLinesBrush="#E2E8F0"
                                          FontSize="12"
                                          RowHeight="40"
                                          ColumnHeaderHeight="42"
                                          BorderThickness="1"
                                          BorderBrush="#DBEAFE">

                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#3B82F6"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="12"/>
                                            <Setter Property="Padding" Value="10,8"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Produit"
                                                            Binding="{Binding Product.Nom}"
                                                            Width="*"/>

                                        <DataGridTextColumn Header="Quantité"
                                                            Binding="{Binding Quantite, StringFormat=N2}"
                                                            Width="90"/>

                                        <DataGridTextColumn Header="Prix Unit."
                                                            Binding="{Binding PrixUnitaire, StringFormat=N2}"
                                                            Width="90"/>

                                        <DataGridTextColumn Header="Total"
                                                            Binding="{Binding MontantLigne, StringFormat=N2}"
                                                            Width="100"/>

                                        <DataGridTemplateColumn Header="" Width="60">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="🗑️"
                                                            Width="40"
                                                            Height="30"
                                                            Background="#EF4444"
                                                            Foreground="White"
                                                            FontSize="12"
                                                            Cursor="Hand"
                                                            BorderThickness="0"
                                                            Click="DeleteLineButton_Click">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="4">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                      VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>

                       
                        <Border Background="#ECFDF5"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16"
                                BorderBrush="#10B981"
                                BorderThickness="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Text="💰 Calculs de la Facture"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#059669"
                                           Margin="0,0,0,15"/>

                                <!-- Total HT -->
                                <Grid Grid.Row="1" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Total HT:"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#1E293B"
                                               VerticalAlignment="Center"/>
                                    <TextBox x:Name="MontantHTTextBox"
                                             Grid.Column="1"
                                             IsReadOnly="True"
                                             Background="#F0FDF4"
                                             Style="{StaticResource ModernTextBox}"/>
                                </Grid>

                             
                                <Border Grid.Row="2" 
                                        Background="White"
                                        CornerRadius="6"
                                        Padding="12"
                                        Margin="0,0,0,10"
                                        BorderBrush="#FCD34D"
                                        BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="🏷️ Remise"
                                                   FontSize="13"
                                                   FontWeight="Bold"
                                                   Foreground="#D97706"
                                                   Margin="0,0,0,10"/>

                                        
                                        <Border Background="#FFFBEB" 
                                                CornerRadius="4" 
                                                Padding="10"
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>

                                                <RadioButton x:Name="RemisePourcentageRadio"
                                                             Grid.Column="0"
                                                             Content="Pourcentage"
                                                             GroupName="RemiseType"
                                                             IsChecked="False"
                                                             FontSize="12"
                                                             FontWeight="SemiBold"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,10,0"
                                                             Checked="RemiseType_Changed"/>

                                                <TextBox x:Name="RemisePourcentageTextBox"
                                                         Grid.Column="2"
                                                         Height="32"
                                                         Padding="8,0"
                                                         FontSize="12"
                                                         Text="0"
                                                         VerticalContentAlignment="Center"
                                                         TextChanged="RemisePourcentageTextBox_TextChanged"/>

                                                <TextBlock Grid.Column="3"
                                                           Text=" %"
                                                           FontSize="13"
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"
                                                           Margin="5,0,0,0"/>
                                            </Grid>
                                        </Border>

                                        
                                        <Border Background="#FFFBEB" 
                                                CornerRadius="4" 
                                                Padding="10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>

                                                <RadioButton x:Name="RemiseFixeRadio"
                                                             Grid.Column="0"
                                                             Content="Valeur Fixe"
                                                             GroupName="RemiseType"
                                                             FontSize="12"
                                                             FontWeight="SemiBold"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,10,0"
                                                             Checked="RemiseType_Changed"/>

                                                <TextBox x:Name="RemiseFixeTextBox"
                                                         Grid.Column="2"
                                                         Height="32"
                                                         Padding="8,0"
                                                         FontSize="12"
                                                         Text="0"
                                                         VerticalContentAlignment="Center"
                                                         TextChanged="RemiseFixeTextBox_TextChanged"/>

                                                <TextBlock Grid.Column="3"
                                                           Text=" DA"
                                                           FontSize="13"
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"
                                                           Margin="5,0,0,0"/>
                                            </Grid>
                                        </Border>

                                      
                                        <Grid Margin="0,10,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Montant de Remise (-) :"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="#DC2626"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock x:Name="RemiseMontantTextBlock"
                                                       Grid.Column="1"
                                                       Text="0.00 DA"
                                                       FontSize="14"
                                                       FontWeight="Bold"
                                                       Foreground="#DC2626"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <Separator Grid.Row="3" Margin="0,0,0,10" Background="#CBD5E0"/>

                              
                                <Grid Grid.Row="4" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Net HT:"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="#059669"
                                               VerticalAlignment="Center"/>
                                    <TextBox x:Name="NetHTTextBox"
                                             Grid.Column="1"
                                             Background="#D1FAE5"
                                             FontWeight="Bold"
                                             Style="{StaticResource ModernTextBox}"
                                             TextChanged="NetHT_Changed"/>
                                </Grid>

                              
                                <Grid Grid.Row="5" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="TVA:"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="#1E293B"
                                               VerticalAlignment="Center"/>
                                    <TextBox x:Name="MontantTVATextBox"
                                             Grid.Column="1"
                                             IsReadOnly="True"
                                             Background="#F0FDF4"
                                             Style="{StaticResource ModernTextBox}"/>
                                </Grid>

                                <Separator Grid.Row="6" Margin="0,0,0,10" Background="#10B981" Height="2"/>

                               
                                <Grid Grid.Row="7">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="💵 Total TTC:"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="#059669"
                                               VerticalAlignment="Center"/>
                                    <TextBox x:Name="MontantTTCTextBox"
                                             Grid.Column="1"
                                             IsReadOnly="True"
                                             Background="#10B981"
                                             Foreground="White"
                                             FontWeight="Bold"
                                             FontSize="16"
                                             Style="{StaticResource ModernTextBox}"/>
                                </Grid>
                            </Grid>
                        </Border>

                       
                        <Border Background="#FFF7ED"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16"
                                BorderBrush="#F59E0B"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="💳 Mode de Règlement"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#D97706"
                                           Margin="0,0,0,12"/>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <RadioButton x:Name="ReglementEspeceRadio"
                                                 Content="💵 Espèce"
                                                 GroupName="ModeReglement"
                                                 IsChecked="True"
                                                 FontSize="13"
                                                 FontWeight="SemiBold"
                                                 Margin="0,0,20,0"/>

                                    <RadioButton x:Name="ReglementBancaireRadio"
                                                 Content="🏦 Versement Bancaire"
                                                 GroupName="ModeReglement"
                                                 FontSize="13"
                                                 FontWeight="SemiBold"
                                                 Margin="0,0,20,0"/>

                                    <RadioButton x:Name="ReglementTermeRadio"
                                                 Content="📅 À Terme"
                                                 GroupName="ModeReglement"
                                                 FontSize="13"
                                                 FontWeight="SemiBold"
                                                 Margin="0,0,20,0"/>

                                    <RadioButton x:Name="ReglementMixteRadio"
                                                 Content="🔀 Mixte"
                                                 GroupName="ModeReglement"
                                                 FontSize="13"
                                                 FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                       
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="SaveInvoiceButton"
                                    Content="💾 Enregistrer la Facture"
                                    Width="200"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource PrimaryButton}"
                                    Click="SaveInvoiceButton_Click"/>

                            <Button x:Name="ClearButton"
                                    Content="🔄 Réinitialiser"
                                    Width="140"
                                    Style="{StaticResource SecondaryButton}"
                                    Click="ClearButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <GridSplitter Grid.Column="1"
                          Width="8"
                          HorizontalAlignment="Stretch"
                          Background="Transparent"
                          ShowsPreview="False"/>

         
            <Border Grid.Column="2" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="#FFFBEB"
                            CornerRadius="8"
                            Padding="12"
                            BorderBrush="#F59E0B"
                            BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="🛒 Produits Disponibles"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#D97706"
                                       Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1"
                                       Text="💡 Double-cliquez sur un produit pour l'ajouter"
                                       FontSize="11"
                                       FontStyle="Italic"
                                       Foreground="#92400E"
                                       Margin="0,0,0,10"/>

                            <DataGrid x:Name="AvailableProductsGrid"
                                      Grid.Row="2"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      CanUserAddRows="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="#FED7AA"
                                      FontSize="11"
                                      RowHeight="36"
                                      ColumnHeaderHeight="38"
                                      BorderThickness="1"
                                      BorderBrush="#FED7AA"
                                      SelectionChanged="AvailableProductsGrid_SelectionChanged"
                                      MouseDoubleClick="AvailableProductsGrid_MouseDoubleClick">

                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#F59E0B"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="Padding" Value="8,6"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Code"
                                                        Binding="{Binding CodeProduit}"
                                                        Width="70"/>

                                    <DataGridTextColumn Header="Produit"
                                                        Binding="{Binding Nom}"
                                                        Width="*"/>

                                    <DataGridTextColumn Header="Prix"
                                                        Binding="{Binding PrixVente, StringFormat=N2}"
                                                        Width="70"/>

                                    <DataGridTextColumn Header="Max Qté"
                                                        Binding="{Binding MaxQuantity, StringFormat=N0}"
                                                        Width="70"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <Border Grid.Row="2"
                            Background="#F0F9FF"
                            CornerRadius="8"
                            Padding="12"
                            BorderBrush="#3B82F6"
                            BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       x:Name="RecipeHeaderTextBlock"
                                       Text="📋 Recette du Produit"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="#1E40AF"
                                       Margin="0,0,0,10"/>

                            <DataGrid x:Name="ProductRecipeGrid"
                                      Grid.Row="1"
                                      Height="180"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      CanUserAddRows="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="#BFDBFE"
                                      FontSize="10"
                                      RowHeight="32"
                                      ColumnHeaderHeight="34"
                                      BorderThickness="1"
                                      BorderBrush="#BFDBFE">

                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#3B82F6"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="10"/>
                                        <Setter Property="Padding" Value="6,5"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Matière Première"
                                                        Binding="{Binding RawMaterialName}"
                                                        Width="*"/>

                                    <DataGridTextColumn Header="Qté/U"
                                                        Binding="{Binding QuantityPerUnit, StringFormat=N3}"
                                                        Width="65"/>

                                    <DataGridTextColumn Header="Stock"
                                                        Binding="{Binding AvailableStock, StringFormat=N2}"
                                                        Width="65"/>

                                    <DataGridTextColumn Header="Max U"
                                                        Binding="{Binding MaxUnits, StringFormat=N0}"
                                                        Width="55"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
