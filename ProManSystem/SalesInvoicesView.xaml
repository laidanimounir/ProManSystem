<UserControl x:Class="ProManSystem.Views.SalesInvoicesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8FAFC"
             FlowDirection="LeftToRight">

    <UserControl.Resources>
        
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CBD5E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#1E3A8A"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

  
        <Style x:Key="CompactTextBox" TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,0"/>
        </Style>

       
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#059669"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#64748B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#475569"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F59E0B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D97706"/>
                </Trigger>
            </Style.Triggers>
        </Style>

      
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08"
                                      BlurRadius="12" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

      
        <Border Grid.Row="0" Background="#1E3A8A" Padding="20,15">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🧾" FontSize="28" Margin="0,0,10,0"/>
                    <TextBlock Text="Facturation de Vente" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="👤 Administrateur" 
                               FontSize="13" 
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                </StackPanel>
            </Grid>
        </Border>

 
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#E2E8F0" 
                BorderThickness="0,0,0,1"
                Padding="20,12"
                Margin="15,15,15,0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05"
                                  BlurRadius="8" ShadowDepth="2"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="N° Facture:" 
                               FontSize="12" 
                               FontWeight="SemiBold"
                               Foreground="#64748B"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBox x:Name="NumeroFactureTextBox"
                             Width="100"
                             IsReadOnly="True"
                             Background="#F1F5F9"
                             Style="{StaticResource CompactTextBox}"/>
                </StackPanel>

              
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Date:" 
                               FontSize="12" 
                               FontWeight="SemiBold"
                               Foreground="#64748B"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <DatePicker x:Name="DateFacturePicker"
                                Width="120"
                                Height="32"
                                VerticalContentAlignment="Center"/>
                </StackPanel>

            
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="TVA (%):" 
                               FontSize="12" 
                               FontWeight="SemiBold"
                               Foreground="#64748B"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox x:Name="TvaComboBox"
                              Width="70"
                              Height="32"
                              IsEditable="True"
                              VerticalContentAlignment="Center"
                              SelectionChanged="TvaComboBox_SelectionChanged"/>
                </StackPanel>

             
                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="👤 Client:" 
                               FontSize="12" 
                               FontWeight="SemiBold"
                               Foreground="#64748B"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <TextBox x:Name="CustomerTextBox"
                             Width="250"
                             IsReadOnly="True"
                             Background="#FFFBEB"
                             Style="{StaticResource CompactTextBox}"/>
                </StackPanel>

              
                <Button Grid.Column="5"
                        x:Name="PickCustomerButton"
                        Content="🔍 Choisir Client"
                        Width="140"
                        Height="32"
                        FontSize="12"
                        Style="{StaticResource WarningButton}"
                        Click="PickCustomerButton_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Row="2" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="1.3*"/>
            </Grid.ColumnDefinitions>

         
            <Border Grid.Column="0" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    
                    <TextBlock Grid.Row="0"
                               Text="📦 Articles de la Facture"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               Margin="0,0,0,12"/>

                
                    <Border Grid.Row="1"
                            Background="White"
                            CornerRadius="6"
                            BorderBrush="#3B82F6"
                            BorderThickness="2">
                        <DataGrid x:Name="InvoiceLinesGrid"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#E2E8F0"
                                  FontSize="12"
                                  RowHeight="40"
                                  ColumnHeaderHeight="42"
                                  BorderThickness="0"
                                  AlternatingRowBackground="#F8FAFC">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#3B82F6"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="12"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Produit"
                                                    Binding="{Binding Product.Nom}"
                                                    Width="*"/>

                                <DataGridTextColumn Header="Quantité"
                                                    Binding="{Binding Quantite, StringFormat=N2}"
                                                    Width="90"/>

                                <DataGridTextColumn Header="Prix Unit."
                                                    Binding="{Binding PrixUnitaire, StringFormat=N2}"
                                                    Width="90"/>

                                <DataGridTextColumn Header="Total"
                                                    Binding="{Binding MontantLigne, StringFormat=N2}"
                                                    Width="100"/>

                                <DataGridTemplateColumn Header="" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="🗑️"
                                                    Width="40"
                                                    Height="30"
                                                    Background="#EF4444"
                                                    Foreground="White"
                                                    FontSize="12"
                                                    Cursor="Hand"
                                                    BorderThickness="0"
                                                    Click="DeleteLineButton_Click">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="4">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <Button Grid.Row="2"
                            Content="➕ Ajouter un Produit"
                            Height="36"
                            Margin="0,12,0,0"
                            FontSize="13"
                            Style="{StaticResource PrimaryButton}"
                            HorizontalAlignment="Left"/>

                   
                    <Border Grid.Row="4"
                            Background="#F0F9FF"
                            CornerRadius="6"
                            Padding="12"
                            BorderBrush="#3B82F6"
                            BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       x:Name="RecipeHeaderTextBlock"
                                       Text="📋 Recette du Produit Sélectionné"
                                       FontSize="13"
                                       FontWeight="Bold"
                                       Foreground="#1E40AF"
                                       Margin="0,0,0,8"/>

                            <DataGrid x:Name="ProductRecipeGrid"
                                      Grid.Row="1"
                                      Height="140"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      CanUserAddRows="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      HorizontalGridLinesBrush="#BFDBFE"
                                      FontSize="11"
                                      RowHeight="32"
                                      ColumnHeaderHeight="34"
                                      BorderThickness="1"
                                      BorderBrush="#BFDBFE">

                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#3B82F6"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="10"/>
                                        <Setter Property="Padding" Value="6,5"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Matière Première"
                                                        Binding="{Binding RawMaterialName}"
                                                        Width="*"/>

                                    <DataGridTextColumn Header="Qté/U"
                                                        Binding="{Binding QuantityPerUnit, StringFormat=N3}"
                                                        Width="70"/>

                                    <DataGridTextColumn Header="Stock"
                                                        Binding="{Binding AvailableStock, StringFormat=N2}"
                                                        Width="70"/>

                                    <DataGridTextColumn Header="Max"
                                                        Binding="{Binding MaxUnits, StringFormat=N0}"
                                                        Width="60"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

         
            <GridSplitter Grid.Column="1"
                          Width="8"
                          HorizontalAlignment="Stretch"
                          Background="Transparent"
                          ShowsPreview="False"/>

   
            <Border Grid.Column="2" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

               
                    <TextBlock Grid.Row="0"
                               Text="🛒 Produits Disponibles"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#D97706"
                               Margin="0,0,0,10"/>

                
                    <TextBlock Grid.Row="1"
                               Text="💡 Double-cliquez pour ajouter"
                               FontSize="11"
                               FontStyle="Italic"
                               Foreground="#92400E"
                               Margin="0,0,0,10"/>

                    
                    <Border Grid.Row="2"
                            Background="#FFFBEB"
                            CornerRadius="6"
                            BorderBrush="#F59E0B"
                            BorderThickness="1">
                        <DataGrid x:Name="AvailableProductsGrid"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  HorizontalGridLinesBrush="#FED7AA"
                                  FontSize="11"
                                  RowHeight="36"
                                  ColumnHeaderHeight="38"
                                  BorderThickness="0"
                                  AlternatingRowBackground="#FEF3C7"
                                  SelectionChanged="AvailableProductsGrid_SelectionChanged"
                                  MouseDoubleClick="AvailableProductsGrid_MouseDoubleClick">

                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#F59E0B"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="Padding" Value="8,6"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Code"
                                                    Binding="{Binding CodeProduit}"
                                                    Width="70"/>

                                <DataGridTextColumn Header="Produit"
                                                    Binding="{Binding Nom}"
                                                    Width="*"/>

                                <DataGridTextColumn Header="Prix"
                                                    Binding="{Binding PrixVente, StringFormat=N2}"
                                                    Width="65"/>

                                <DataGridTextColumn Header="Max"
                                                    Binding="{Binding MaxQuantity, StringFormat=N0}"
                                                    Width="55"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </Border>

           
            <GridSplitter Grid.Column="3"
                          Width="8"
                          HorizontalAlignment="Stretch"
                          Background="Transparent"
                          ShowsPreview="False"/>

         
            <Border Grid.Column="4" Style="{StaticResource Card}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                      

                    
                        <Border Background="White"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,0,0,8"
                                BorderBrush="#E2E8F0"
                                BorderThickness="1">
                            <Grid>
                                <TextBlock Text="Total HT:"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#64748B"
                                           VerticalAlignment="Center"/>
                                <TextBox x:Name="MontantHTTextBox"
                                         Width="110"
                                         HorizontalAlignment="Right"
                                         IsReadOnly="True"
                                         Background="#F0FDF4"
                                         FontWeight="Bold"
                                         Style="{StaticResource CompactTextBox}"/>
                            </Grid>
                        </Border>

                       
                        <Border Background="#FFFBEB"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,0,0,8"
                                BorderBrush="#F59E0B"
                                BorderThickness="2">
                            <StackPanel>
                                <TextBlock Text="🏷️ Remise"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#D97706"
                                           Margin="0,0,0,10"
                                           HorizontalAlignment="Center"/>

                           
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="25"/>
                                    </Grid.ColumnDefinitions>

                                    <RadioButton x:Name="RemisePourcentageRadio"
                                                 Grid.Column="0"
                                                 GroupName="RemiseType"
                                                 IsChecked="False"
                                                 VerticalAlignment="Center"
                                                 Checked="RemiseType_Changed"/>

                                    <TextBlock Grid.Column="1"
                                               Text="%"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"
                                               Margin="5,0,0,0"/>

                                    <TextBox x:Name="RemisePourcentageTextBox"
                                             Grid.Column="2"
                                             Height="28"
                                             Padding="6,0"
                                             FontSize="11"
                                             Text="0"
                                             VerticalContentAlignment="Center"
                                             TextChanged="RemisePourcentageTextBox_TextChanged"/>

                                    <TextBlock Grid.Column="3"
                                               Text=" %"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               Margin="3,0,0,0"/>
                                </Grid>

                              
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="25"/>
                                    </Grid.ColumnDefinitions>

                                    <RadioButton x:Name="RemiseFixeRadio"
                                                 Grid.Column="0"
                                                 GroupName="RemiseType"
                                                 VerticalAlignment="Center"
                                                 Checked="RemiseType_Changed"/>

                                    <TextBlock Grid.Column="1"
                                               Text="DA"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"
                                               Margin="5,0,0,0"/>

                                    <TextBox x:Name="RemiseFixeTextBox"
                                             Grid.Column="2"
                                             Height="28"
                                             Padding="6,0"
                                             FontSize="11"
                                             Text="0"
                                             VerticalContentAlignment="Center"
                                             TextChanged="RemiseFixeTextBox_TextChanged"/>

                                    <TextBlock Grid.Column="3"
                                               Text=" DA"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               Margin="3,0,0,0"/>
                                </Grid>

                               
                                <Border Background="White"
                                        CornerRadius="4"
                                        Padding="8"
                                        BorderBrush="#FCD34D"
                                        BorderThickness="1">
                                    <Grid>
                                        <TextBlock Text="Montant:"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="#DC2626"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock x:Name="RemiseMontantTextBlock"
                                                   Text="0.00 DA"
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   Foreground="#DC2626"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>

                       
                        <Border Background="#D1FAE5"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,0,0,8"
                                BorderBrush="#10B981"
                                BorderThickness="2">
                            <Grid>
                                <TextBlock Text="Net HT:"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#059669"
                                           VerticalAlignment="Center"/>
                                <TextBox x:Name="NetHTTextBox"
                                         Width="110"
                                         HorizontalAlignment="Right"
                                         Background="White"
                                         FontWeight="Bold"
                                         FontSize="13"
                                         Style="{StaticResource CompactTextBox}"
                                         TextChanged="NetHT_Changed"/>
                            </Grid>
                        </Border>

                       
                        <Border Background="White"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,0,0,8"
                                BorderBrush="#E2E8F0"
                                BorderThickness="1">
                            <Grid>
                                <TextBlock Text="TVA:"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#64748B"
                                           VerticalAlignment="Center"/>
                                <TextBox x:Name="MontantTVATextBox"
                                         Width="110"
                                         HorizontalAlignment="Right"
                                         IsReadOnly="True"
                                         Background="#F0FDF4"
                                         Style="{StaticResource CompactTextBox}"/>
                            </Grid>
                        </Border>

                        <Separator Margin="0,8" Background="#CBD5E0" Height="2"/>

                     
                        <Border Background="#10B981"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,0,0,16">
                            <Grid>
                                <TextBlock Text="💵 Total TTC:"
                                           FontSize="14"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                <TextBox x:Name="MontantTTCTextBox"
                                         Width="110"
                                         HorizontalAlignment="Right"
                                         IsReadOnly="True"
                                         Background="White"
                                         Foreground="#10B981"
                                         FontWeight="Bold"
                                         FontSize="15"
                                         Style="{StaticResource CompactTextBox}"/>
                            </Grid>
                        </Border>

                        
                        <Border Background="#FFF7ED"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,0,0,16"
                                BorderBrush="#F59E0B"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="💳 Mode"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#D97706"
                                           Margin="0,0,0,10"
                                           HorizontalAlignment="Center"/>

                                <RadioButton x:Name="ReglementEspeceRadio"
                                             Content="💵 Espèce"
                                             GroupName="ModeReglement"
                                             IsChecked="True"
                                             FontSize="11"
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,6"/>

                                <RadioButton x:Name="ReglementBancaireRadio"
                                             Content="🏦 Bancaire"
                                             GroupName="ModeReglement"
                                             FontSize="11"
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,6"/>

                                <RadioButton x:Name="ReglementTermeRadio"
                                             Content="📅 À Terme"
                                             GroupName="ModeReglement"
                                             FontSize="11"
                                             FontWeight="SemiBold"
                                             Margin="0,0,0,6"/>

                                <RadioButton x:Name="ReglementMixteRadio"
                                             Content="🔀 Mixte"
                                             GroupName="ModeReglement"
                                             FontSize="11"
                                             FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        
                        <Button x:Name="SaveInvoiceButton"
                                Content="💾 Enregistrer"
                                Height="40"
                                Margin="0,0,0,8"
                                Style="{StaticResource PrimaryButton}"
                                Click="SaveInvoiceButton_Click"/>

                        <Button x:Name="ClearButton"
                                Content="🔄 Réinitialiser"
                                Height="36"
                                FontSize="12"
                                Style="{StaticResource SecondaryButton}"
                                Click="ClearButton_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
