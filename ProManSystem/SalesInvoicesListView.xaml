<UserControl x:Class="ProManSystem.Views.SalesInvoicesListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8FAFC"
             FlowDirection="LeftToRight">

    <UserControl.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CBD5E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#1E3A8A"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1E3A8A"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E40AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.05"
                                      BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP HEADER BAR -->
        <Border Grid.Row="0" Background="#1E3A8A" Padding="20,15">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📋" FontSize="28" Margin="0,0,10,0"/>
                    <TextBlock Text="Liste des Factures de Vente" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="➕ Nouvelle Facture"
                            Height="36"
                            Background="#10B981"
                            Foreground="White"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            BorderThickness="0"
                            Padding="20,0"
                            Click="NewInvoiceButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- STATISTICS CARDS -->
        <Grid Grid.Row="1" Margin="15,15,15,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total CA Card -->
            <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="💰" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Chiffre d'Affaires Total"
                               FontSize="12"
                               Foreground="#64748B"
                               TextAlignment="Center"
                               Margin="0,0,0,6"/>
                    <TextBlock x:Name="TotalCATextBlock"
                               Text="0.00 DA"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#10B981"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Total Invoices Card -->
            <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="4,0">
                <StackPanel>
                    <TextBlock Text="📊" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Nombre de Factures"
                               FontSize="12"
                               Foreground="#64748B"
                               TextAlignment="Center"
                               Margin="0,0,0,6"/>
                    <TextBlock x:Name="TotalInvoicesTextBlock"
                               Text="0"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#3B82F6"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- This Month Card -->
            <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="4,0">
                <StackPanel>
                    <TextBlock Text="📅" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="CA Ce Mois"
                               FontSize="12"
                               Foreground="#64748B"
                               TextAlignment="Center"
                               Margin="0,0,0,6"/>
                    <TextBlock x:Name="ThisMonthCATextBlock"
                               Text="0.00 DA"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#F59E0B"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Clients Count Card -->
            <Border Grid.Column="3" Style="{StaticResource StatCard}" Margin="8,0,0,0">
                <StackPanel>
                    <TextBlock Text="👥" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Clients Uniques"
                               FontSize="12"
                               Foreground="#64748B"
                               TextAlignment="Center"
                               Margin="0,0,0,6"/>
                    <TextBlock x:Name="UniqueClientsTextBlock"
                               Text="0"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#8B5CF6"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- FILTERS SECTION -->
        <Border Grid.Row="2" 
                Background="White"
                CornerRadius="8"
                Padding="16"
                Margin="15,15,15,0"
                BorderBrush="#E2E8F0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05"
                                  BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 1: Search and Date -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <Grid Grid.Column="0">
                        <TextBox x:Name="SearchTextBox"
                                 Style="{StaticResource ModernTextBox}"
                                 Padding="40,0,12,0"/>
                        <TextBlock Text="🔍"
                                   FontSize="16"
                                   Foreground="#94A3B8"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0"/>
                        <TextBlock Text="N° facture, client..."
                                   FontSize="13"
                                   Foreground="#94A3B8"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center"
                                   Margin="40,0,12,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Date From -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Date Début"
                                   FontSize="11"
                                   Foreground="#64748B"
                                   Margin="0,0,0,4"/>
                        <DatePicker x:Name="DateFromPicker"
                                    Height="38"
                                    VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Date To -->
                    <StackPanel Grid.Column="4">
                        <TextBlock Text="Date Fin"
                                   FontSize="11"
                                   Foreground="#64748B"
                                   Margin="0,0,0,4"/>
                        <DatePicker x:Name="DateToPicker"
                                    Height="38"
                                    VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- Search Button -->
                    <Button Grid.Column="6"
                            Content="🔍 Rechercher"
                            Width="140"
                            Style="{StaticResource PrimaryButton}"
                            Click="SearchButton_Click"/>
                </Grid>

                <!-- Row 2: Mode Règlement and Actions -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Mode de Règlement Filter -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Mode de Règlement"
                                   FontSize="11"
                                   Foreground="#64748B"
                                   Margin="0,0,0,4"/>
                        <ComboBox x:Name="ModeReglementComboBox"
                                  Height="38"
                                  FontSize="13"
                                  VerticalContentAlignment="Center"
                                  SelectionChanged="ModeReglementComboBox_SelectionChanged">
                            <ComboBoxItem Content="🔹 Tous" IsSelected="True"/>
                            <ComboBoxItem Content="💵 Espèce"/>
                            <ComboBoxItem Content="🏦 Versement Bancaire"/>
                            <ComboBoxItem Content="📅 À Terme"/>
                            <ComboBoxItem Content="🔀 Mixte"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Reset Button -->
                    <Button Grid.Column="2"
                            Content="🔄 Réinitialiser"
                            Width="140"
                            Height="38"
                            Background="#64748B"
                            Foreground="White"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            BorderThickness="0"
                            Click="ResetButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Export Button -->
                    <Button Grid.Column="4"
                            Content="📥 Exporter PDF"
                            Width="140"
                            Height="38"
                            Background="#10B981"
                            Foreground="White"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            BorderThickness="0"
                            Click="ExportButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- INVOICES DATA GRID -->
        <Border Grid.Row="3"
                Background="White"
                CornerRadius="8"
                Padding="16"
                Margin="15"
                BorderBrush="#E2E8F0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05"
                                  BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0">
                    <TextBlock Text="📋 Liste des Factures"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               VerticalAlignment="Center"/>

                    <TextBlock x:Name="ResultsCountTextBlock"
                               Text="0 facture(s) trouvée(s)"
                               FontSize="13"
                               Foreground="#64748B"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- DataGrid -->
                <DataGrid x:Name="InvoicesGrid"
                          Grid.Row="2"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#E2E8F0"
                          AlternatingRowBackground="#F8FAFC"
                          FontSize="13"
                          RowHeight="50"
                          ColumnHeaderHeight="48"
                          BorderThickness="1"
                          BorderBrush="#E2E8F0">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#1E3A8A"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="12,10"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>

                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#EFF6FF"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#DBEAFE"/>
                                    <Setter Property="Foreground" Value="#1E293B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="12,0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#1E293B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="N° Facture"
                                            Binding="{Binding NumeroFacture}"
                                            Width="110"/>

                        <DataGridTextColumn Header="Date"
                                            Binding="{Binding DateFacture, StringFormat=dd/MM/yyyy}"
                                            Width="100"/>

                        <DataGridTextColumn Header="Client"
                                            Binding="{Binding Customer.NomComplet}"
                                            Width="*"
                                            MinWidth="150"/>

                        <DataGridTextColumn Header="Total HT"
                                            Binding="{Binding MontantHT, StringFormat=N2}"
                                            Width="100"/>

                        <DataGridTextColumn Header="Remise"
                                            Binding="{Binding RemiseMontant, StringFormat=N2}"
                                            Width="90"/>

                        <DataGridTextColumn Header="Net HT"
                                            Binding="{Binding NetHT, StringFormat=N2}"
                                            Width="100"/>

                        <DataGridTextColumn Header="TVA"
                                            Binding="{Binding MontantTVA, StringFormat=N2}"
                                            Width="90"/>

                        <DataGridTextColumn Header="Total TTC"
                                            Binding="{Binding MontantTTC, StringFormat=N2}"
                                            Width="110"/>

                        <DataGridTemplateColumn Header="Mode" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ModeReglementDisplay}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Padding="8,4"
                                               Background="#EFF6FF"
                                               Foreground="#1E40AF"
                                               TextAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Actions" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="👁️"
                                                Width="32"
                                                Height="32"
                                                Background="#3B82F6"
                                                Foreground="White"
                                                ToolTip="Voir détails"
                                                Margin="0,0,4,0"
                                                Cursor="Hand"
                                                BorderThickness="0"
                                                Click="ViewDetailsButton_Click">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <Button Content="🖨️"
                                                Width="32"
                                                Height="32"
                                                Background="#10B981"
                                                Foreground="White"
                                                ToolTip="Imprimer"
                                                Margin="0,0,4,0"
                                                Cursor="Hand"
                                                BorderThickness="0"
                                                Click="PrintButton_Click">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>

                                        <Button Content="📄"
                                                Width="32"
                                                Height="32"
                                                Background="#F59E0B"
                                                Foreground="White"
                                                ToolTip="PDF"
                                                Cursor="Hand"
                                                BorderThickness="0"
                                                Click="PdfButton_Click">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
