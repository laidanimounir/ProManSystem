<Window x:Class="ProManSystem.Views.CustomerCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Carte client" Height="560" Width="720"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F0F2F5">

    <Window.Resources>
        <DropShadowEffect x:Key="CardShadow"
                          Color="#33000000"
                          ShadowDepth="4"
                          BlurRadius="12"
                          Opacity="0.6" />

      
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

       
        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Border x:Name="CardBorder"
                Background="White"
                CornerRadius="12"
                Padding="24"
                Effect="{StaticResource CardShadow}">

            <Grid x:Name="CardRootGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    
                    <RowDefinition Height="*"/>
                    
                    <RowDefinition Height="Auto"/>
                    
                </Grid.RowDefinitions>

               
                <StackPanel Grid.Row="0"
                            Margin="0,0,0,16"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="Atelio"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#1976D2"
                               VerticalAlignment="Center"/>
                    <TextBlock Text=" • Carte d'identité client"
                               FontSize="14"
                               Foreground="#555"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </StackPanel>

                
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        
                        <ColumnDefinition Width="*"/>
                       
                    </Grid.ColumnDefinitions>

                   
                    <Grid Grid.Column="0" Margin="0,0,16,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Code client" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="CodeTextBlock"
                                       Style="{StaticResource ValueText}"
                                       FontWeight="Bold"/>

                            <TextBlock Text="Nom / Raison sociale" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="NomTextBlock"
                                       Style="{StaticResource ValueText}"
                                       TextWrapping="Wrap"/>

                            <TextBlock Text="Activité" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="ActiviteTextBlock"
                                       Style="{StaticResource ValueText}"/>

                            <TextBlock Text="Adresse" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="AdresseTextBlock"
                                       Style="{StaticResource ValueText}"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="N° RC" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="RcTextBlock"
                                       Style="{StaticResource ValueText}"/>

                            <TextBlock Text="Matricule fiscal" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="MatriculeTextBlock"
                                       Style="{StaticResource ValueText}"/>

                            <TextBlock Text="Type / N° ID" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="IdTextBlock"
                                       Style="{StaticResource ValueText}"/>

                            <TextBlock Text="Catégorie" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="CategorieTextBlock"
                                       Style="{StaticResource ValueText}"/>

                            <TextBlock Text="Date création" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="DateTextBlock"
                                       Style="{StaticResource ValueText}"/>

                            
                            <TextBlock Text="Statut" Style="{StaticResource LabelText}" Margin="0,8,0,4"/>
                            <Border x:Name="StatutBadge"
                                    CornerRadius="6"
                                    Padding="8,4"
                                    Width="140"
                                    Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock x:Name="StatutIcon"
                                               FontSize="12"
                                               Margin="0,0,4,0"/>
                                    <TextBlock x:Name="StatutTextBlock"
                                               FontSize="12"
                                               Foreground="White"
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="Remarques" Style="{StaticResource LabelText}"/>
                            <TextBlock x:Name="RemarquesTextBlock"
                                       Style="{StaticResource ValueText}"
                                       FontSize="12"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    
                    <Border Grid.Column="1"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="220" Height="220"
                            BorderBrush="#E0E0E0" BorderThickness="1"
                            CornerRadius="8"
                            Background="#FAFAFA"
                            Padding="10">
                        <Grid>
                            <Image x:Name="QrImage"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   SnapsToDevicePixels="True"
                                   RenderOptions.BitmapScalingMode="NearestNeighbor"
                                   Style="{x:Null}"/>
                            <TextBlock x:Name="QrPlaceholder"
                                       Text="QR Code"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="#CCC" FontSize="10"/>
                        </Grid>
                    </Border>
                </Grid>

                
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,16,0,0">
                    <Border CornerRadius="6" Background="#2196F3" Margin="0,0,12,0">
                        <Button x:Name="PrintButton"
                                Content="🖨️ Imprimer"
                                Width="140" Padding="10,8"
                                Background="Transparent" BorderThickness="0"
                                Foreground="White" FontWeight="Bold"
                                Click="PrintButton_Click"/>
                    </Border>

                    <Border CornerRadius="6" Background="#4CAF50">
                        <Button x:Name="ExportButton"
                                Content="💾 Enregistrer (PDF)"
                                Width="160" Padding="10,8"
                                Background="Transparent" BorderThickness="0"
                                Foreground="White" FontWeight="Bold"
                                Click="ExportButton_Click"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
