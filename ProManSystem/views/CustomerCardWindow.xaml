<Window x:Class="ProManSystem.Views.CustomerCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Carte client" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA">

    <Grid Margin="10">
        <Border Background="White" CornerRadius="8" Padding="16">
            <Grid x:Name="CardRootGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

               
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Carte d'identité client"
                               FontSize="18" FontWeight="Bold"
                               Foreground="#1976D2"/>
                    <TextBlock x:Name="SousTitreTextBlock"
                               FontSize="12" Foreground="#757575"/>
                </StackPanel>

                
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Code client :" FontWeight="Bold"/>
                        <TextBlock x:Name="CodeTextBlock" Margin="0,0,0,6"/>

                        <TextBlock Text="Nom / Raison sociale :" FontWeight="Bold"/>
                        <TextBlock x:Name="NomTextBlock" Margin="0,0,0,6"/>

                        <TextBlock Text="Activité :" FontWeight="Bold"/>
                        <TextBlock x:Name="ActiviteTextBlock" Margin="0,0,0,6"/>

                        <TextBlock Text="Adresse :" FontWeight="Bold"/>
                        <TextBlock x:Name="AdresseTextBlock" TextWrapping="Wrap"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="N° RC :" FontWeight="Bold"/>
                        <TextBlock x:Name="RcTextBlock" Margin="0,0,0,6"/>

                        <TextBlock Text="Matricule fiscal :" FontWeight="Bold"/>
                        <TextBlock x:Name="MatriculeTextBlock" Margin="0,0,0,6"/>

                        <TextBlock Text="Type ID / N° ID :" FontWeight="Bold"/>
                        <TextBlock x:Name="TypeIdTextBlock" Margin="0,0,0,2"/>
                        <TextBlock x:Name="NumeroIdTextBlock" Margin="0,0,0,6"/>

                        <TextBlock Text="Catégorie :" FontWeight="Bold"/>
                        <TextBlock x:Name="CategorieTextBlock" Margin="0,0,0,6"/>

                        <TextBlock Text="Date de création :" FontWeight="Bold"/>
                        <TextBlock x:Name="DateCreationTextBlock"/>
                    </StackPanel>
                </Grid>

              
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Top">
                        <TextBlock Text="Statut :" FontWeight="Bold"/>
                        <TextBlock x:Name="StatutTextBlock"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Remarques :" FontWeight="Bold"/>
                        <TextBlock x:Name="RemarquesTextBlock"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <Border Grid.Column="1" Margin="10,0,0,0"
                            BorderBrush="#BDBDBD" BorderThickness="1"
                            CornerRadius="4" Background="#FAFAFA">
                        <TextBlock Text="Zone QR code"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="#9E9E9E"/>
                    </Border>
                </Grid>

              
                <StackPanel Grid.Row="3" Orientation="Horizontal"
                            HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Imprimer" Width="110" Margin="0,0,8,0"
                            Click="PrintButton_Click"/>
                    <Button Content="Enregistrer" Width="120"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
