<Window x:Class="ProManSystem.Views.ProductEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إدارة المنتج" Height="440" Width="580"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#EDF2F7"
        FontFamily="Segoe UI">

    <Grid Margin="20">
        <Border Background="White"
                CornerRadius="12"
                Padding="22"
                BorderBrush="#E2E8F0"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000"
                                  BlurRadius="12"
                                  Opacity="0.15"
                                  ShadowDepth="3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- العنوان -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,18">
                    <TextBlock Text="📦" FontSize="26" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="بيانات المنتج"
                                   FontSize="21"
                                   FontWeight="Bold"
                                   Foreground="#2D3748"/>
                        <TextBlock Text="أدخل معلومات المنتج الأساسية، الكود يُولَّد تلقائيًا"
                                   FontSize="12"
                                   Foreground="#A0AEC0"/>
                    </StackPanel>
                </StackPanel>

                <!-- الحقول -->
                <Grid Grid.Row="1" Margin="0,5,0,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="170"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- كود المنتج (تلقائي / للقراءة فقط) -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="كود المنتج (تلقائي)"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"
                               Foreground="#4A5568"/>
                    <TextBox x:Name="CodeTextBox"
                             Grid.Row="0" Grid.Column="1"
                             Height="30" Margin="0,0,0,10"
                             Padding="5"
                             Background="#E2E8F0"
                             BorderBrush="#CBD5E0"
                             IsReadOnly="True"
                             IsTabStop="False"
                             Foreground="#2D3748"
                             ToolTip="يتم توليد الكود تلقائيًا من النظام، لا يمكن تعديله."/>

                    <!-- اسم المنتج -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="اسم المنتج"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"
                               Foreground="#4A5568"/>
                    <TextBox x:Name="NameTextBox"
                             Grid.Row="1" Grid.Column="1"
                             Height="30" Margin="0,0,0,10"
                             Padding="5"
                             Background="#F7FAFC"
                             BorderBrush="#CBD5E0"/>

                    <!-- الوصف -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="الوصف"
                               Margin="0,0,10,10"
                               VerticalAlignment="Top"
                               Foreground="#4A5568"/>
                    <TextBox x:Name="DescriptionTextBox"
                             Grid.Row="2" Grid.Column="1"
                             Height="80" Margin="0,0,0,10"
                             Padding="5"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Background="#F7FAFC"
                             BorderBrush="#CBD5E0"
                             VerticalScrollBarVisibility="Auto"/>

                    <!-- الحد الأدنى للمخزون -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="الحد الأدنى للمخزون"
                               Margin="0,0,10,10"
                               VerticalAlignment="Center"
                               Foreground="#4A5568"/>
                    <TextBox x:Name="StockMinTextBox"
                             Grid.Row="3" Grid.Column="1"
                             Height="30" Margin="0,0,0,10"
                             Padding="5"
                             Text="0"
                             Background="#F7FAFC"
                             BorderBrush="#CBD5E0"/>

                    <!-- سعر البيع -->
                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="سعر البيع"
                               Margin="0,0,10,0"
                               VerticalAlignment="Center"
                               Foreground="#4A5568"/>
                    <TextBox x:Name="PrixVenteTextBox"
                             Grid.Row="4" Grid.Column="1"
                             Height="30"
                             Padding="5"
                             Text="0"
                             Background="#F7FAFC"
                             BorderBrush="#CBD5E0"/>
                </Grid>

                <!-- الأزرار -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,18,0,0">
                    <Button Content="حفظ"
                            Width="120" Height="36"
                            Background="#3182CE"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="0,0,10,0"
                            Cursor="Hand"
                            BorderThickness="0"
                            Click="SaveButton_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="#000000"
                                              BlurRadius="8"
                                              Opacity="0.18"
                                              ShadowDepth="1"/>
                        </Button.Effect>
                    </Button>
                    <Button Content="إلغاء"
                            Width="100" Height="36"
                            Background="#A0AEC0"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            BorderThickness="0"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
