        <SolidColorBrush x:Key="Success" Color="#10B981"/>
        <SolidColorBrush x:Key="SuccessLight" Color="#34D399"/>
        <SolidColorBrush x:Key="Warning" Color="#F59E0B"/>
        <SolidColorBrush x:Key="WarningLight" Color="#FBBF24"/>
        <SolidColorBrush x:Key="Danger" Color="#EF4444"/>
        <SolidColorBrush x:Key="DangerLight" Color="#F87171"/>
        <SolidColorBrush x:Key="Info" Color="#0EA5E9"/>
        <SolidColorBrush x:Key="InfoLight" Color="#38BDF8"/>

        <SolidColorBrush x:Key="Gray50" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="Gray100" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="Gray200" Color="#E5E7EB"/>
