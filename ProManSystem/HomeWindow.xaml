                                        <TextBlock Text="Factures Proforma" 
                                                  FontSize="15" 
                                                  FontWeight="Bold"
                                                  Foreground="{StaticResource TextPrimary}"/>
                                        <TextBlock Text="Factures pro forma" 
                                                  FontSize="12" 
                                                  Foreground="{StaticResource TextSecondary}"
                                                  Margin="0,4,0,0"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <Border Background="#EFF6FF" 
                                                   CornerRadius="12" 
                                                   Padding="8,4">
                                                <TextBlock Text="6 actives" 
                                                          FontSize="11" 
                                                          FontWeight="SemiBold"
                                                          Foreground="{StaticResource Primary}"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>

                                    <Path Grid.Column="2" 
                                          Data="{StaticResource ChevronRightIcon}" 
                                          Fill="{StaticResource TextTertiary}"
                                          Width="20" Height="20"
                                          Stretch="Uniform"
                                          VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Bon de Commande Card -->
                            <Border Style="{StaticResource InvoiceTypeCard}"
                                   MouseLeftButtonDown="BonCommande_Click">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" 
                                           Width="52" Height="52" 
                                           CornerRadius="12"
                                           Margin="0,0,16,0">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#A78BFA" Offset="0"/>
                                                <GradientStop Color="#8B5CF6" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="0" BlurRadius="12" Opacity="0.3" Color="#8B5CF6"/>
                                        </Border.Effect>
                                        <Path Data="{StaticResource CommandIcon}" 
                                              Fill="White"
                                              Width="26" Height="26"
                                              Stretch="Uniform"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Bon de Commande" 
                                                  FontSize="15" 
                                                  FontWeight="Bold"
                                                  Foreground="{StaticResource TextPrimary}"/>
                                        <TextBlock Text="Bons de commande" 
                                                  FontSize="12" 
                                                  Foreground="{StaticResource TextSecondary}"
                                                  Margin="0,4,0,0"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <Border Background="#FAF5FF" 
                                                   CornerRadius="12" 
                                                   Padding="8,4">
                                                <TextBlock Text="9 en cours" 
                                                          FontSize="11" 
                                                          FontWeight="SemiBold"
                                                          Foreground="#8B5CF6"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>

                                    <Path Grid.Column="2" 
                                          Data="{StaticResource ChevronRightIcon}" 
                                          Fill="{StaticResource TextTertiary}"
                                          Width="20" Height="20"
                                          Stretch="Uniform"
                                          VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- Separator -->
                            <Border Height="1" Margin="20,16">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="Transparent" Offset="0"/>
                                        <GradientStop Color="#E2E8F0" Offset="0.5"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>

                            <!-- Statistics Section -->
                            <TextBlock Text="STATISTIQUES" 
                                      FontSize="11" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource TextTertiary}"
                                      Margin="24,8,16,12"/>

                            <!-- Total This Month -->
                            <Border Style="{StaticResource StatCard}" 
                                   Margin="12,8">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#F0FDF4" Offset="0"/>
                                        <GradientStop Color="#DCFCE7" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <Border Width="32" Height="32" 
                                               CornerRadius="8"
                                               Background="{StaticResource SuccessGradient}">
                                            <Path Data="{StaticResource TrendUpIcon}" 
                                                  Fill="White"
                                                  Width="16" Height="16"
                                                  Stretch="Uniform"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Ce mois" 
                                                  FontSize="12" 
                                                  Foreground="#15803D" 
                                                  FontWeight="Medium"
                                                  VerticalAlignment="Center"
                                                  Margin="12,0,0,0"/>
                                    </StackPanel>

                                    <TextBlock Text="24 factures" 
                                              FontSize="24" 
                                              FontWeight="Bold" 
                                              Foreground="#15803D"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBlock Text="↑ +12%" 
                                                  FontSize="13" 
                                                  FontWeight="SemiBold"
                                                  Foreground="#15803D"/>
                                        <TextBlock Text=" vs mois dernier" 
                                                  FontSize="12" 
                                                  Foreground="#166534"
                                                  VerticalAlignment="Center"
                                                  Margin="4,0,0,0"/>
                                    </StackPanel>

                                    <!-- Mini Progress Bar -->
                                    <Border Height="4" 
                                           Background="#BBF7D0" 
                                           CornerRadius="2" 
                                           Margin="0,12,0,0">
                                        <Border Width="180" 
                                               HorizontalAlignment="Left"
                                               Background="{StaticResource Success}" 
                                               CornerRadius="2"/>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Pending Invoices -->
                            <Border Style="{StaticResource StatCard}" 
                                   Margin="12,8">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FEF3C7" Offset="0"/>
                                        <GradientStop Color="#FEF08A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <Border Width="32" Height="32" 
                                               CornerRadius="8"
                                               Background="{StaticResource WarningGradient}">
                                            <TextBlock Text="⏳" 
                                                      FontSize="18"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="En attente" 
                                                  FontSize="12" 
                                                  Foreground="#92400E" 
                                                  FontWeight="Medium"
                                                  VerticalAlignment="Center"
                                                  Margin="12,0,0,0"/>
                                    </StackPanel>

                                    <TextBlock Text="5 factures" 
                                              FontSize="24" 
                                              FontWeight="Bold" 
                                              Foreground="#92400E"/>

                                    <TextBlock Text="Nécessitent votre attention" 
                                              FontSize="11" 
                                              Foreground="#78350F"
                                              Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>

                            <!-- Revenue Card -->
                            <Border Style="{StaticResource StatCard}" 
                                   Margin="12,8">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#EFF6FF" Offset="0"/>
                                        <GradientStop Color="#DBEAFE" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <Border Width="32" Height="32" 
                                               CornerRadius="8"
                                               Background="{StaticResource PrimaryGradient}">
                                            <TextBlock Text="💰" 
                                                      FontSize="18"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="Revenu total" 
                                                  FontSize="12" 
                                                  Foreground="#1E3A8A" 
                                                  FontWeight="Medium"
                                                  VerticalAlignment="Center"
                                                  Margin="12,0,0,0"/>
                                    </StackPanel>

                                    <TextBlock Text="45.850 DA" 
                                              FontSize="24" 
                                              FontWeight="Bold" 
                                              Foreground="#1E3A8A"/>

                                    <TextBlock Text="Ce mois" 
                                              FontSize="11" 
                                              Foreground="#1E40AF"
                                              Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- Create New Invoice Button -->
                    <Border Grid.Row="2" 
                           Background="{StaticResource Gray50}" 
                           Padding="16,20" 
                           BorderThickness="0,1,0,0" 
                           BorderBrush="{StaticResource Border}">
                        <Button x:Name="CreateNewInvoiceButton" 
                               Style="{StaticResource PrimaryButton}"
                               Click="CreateNewInvoice_Click"
                               HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Path Data="{StaticResource AddIcon}" 
                                      Fill="White"
                                      Width="20" Height="20"
                                      Stretch="Uniform"
                                      Margin="0,0,10,0"/>
                                <TextBlock Text="Nouvelle Facture" 
                                          FontSize="15"
                                          FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!--  FOOTER  -->
        <Border Grid.Row="2" 
                Background="{StaticResource Surface}" 
                BorderThickness="0,1,0,0" 
                BorderBrush="{StaticResource Border}">
            <Grid Margin="24,0">
                <TextBlock Text="© 2025 ProManSystem - Atelio. Tous droits réservés." 
                          FontSize="12" 
                          Foreground="{StaticResource TextSecondary}" 
                          VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           VerticalAlignment="Center">
                    <TextBlock Text="Version 1.0.0" 
                              FontSize="11" 
                              Foreground="{StaticResource TextTertiary}"
                              Margin="0,0,16,0"/>
                    <Border Width="1" Height="16" 
                           Background="{StaticResource Border}"/>
                    <TextBlock x:Name="FooterTimeTextBlock" 
                              FontSize="12" 
                              Foreground="{StaticResource TextSecondary}" 
                              FontWeight="Medium"
                              Margin="16,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
