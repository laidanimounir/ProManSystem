<Window x:Class="ProManSystem.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Workshop" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FFEFF3F8">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        
        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Background="White"
                BorderBrush="#DDDDDD" BorderThickness="0,0,0,1"
                Height="50">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                <TextBlock Text="Smart Workshop"
                           FontSize="20" FontWeight="Bold" Foreground="#333333"/>
                <TextBlock Text="  |  Gestion de l'atelier"
                           FontSize="13" Foreground="#777777" Margin="5,3,0,0"/>
            </StackPanel>
        </Border>

        
        <Grid Grid.Row="1" Grid.Column="0" Background="#FF1F2933">
            <StackPanel Margin="15">
                <TextBlock Text="Navigation"
                           Foreground="#A0AEC0" FontSize="12" Margin="0,0,0,10"/>

                
                <Button x:Name="ClientsButton"
                        Height="40" Margin="0,0,0,10"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0"
                        HorizontalContentAlignment="Left"
                        Click="ClientsButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="👥" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Clients" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                
                <Button x:Name="ProductsButton"
                        Height="40" Margin="0,0,0,10"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0"
                        HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📦" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Produits" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button x:Name="SuppliersButton"
                        Height="40"
                        Background="Transparent" Foreground="White"
                        BorderThickness="0"
                        HorizontalContentAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🏭" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Fournisseurs" FontSize="14"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        
        <Border Grid.Row="1" Grid.Column="0"
                HorizontalAlignment="Right" Width="1"
                Background="#202733"/>

      
        <Grid Grid.Row="1" Grid.Column="1" Margin="30,10,20,20">
            <ContentControl x:Name="MainContent"/>
        </Grid>
    </Grid>
</Window>
