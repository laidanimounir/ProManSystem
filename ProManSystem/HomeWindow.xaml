<Window x:Class="ProManSystem.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Workshop" Height="650" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F7FA">

    <Window.Resources>
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10,0,10,8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CBD5E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D3748"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A202C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavButtonActive" TargetType="Button" BasedOn="{StaticResource NavButton}">
            <Setter Property="Background" Value="#4299E1"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Border Grid.Row="0" Grid.ColumnSpan="2"
                Background="White"
                BorderBrush="#E2E8F0" BorderThickness="0,0,0,1"
                Height="65">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.05"
                                  BlurRadius="8" ShadowDepth="2"/>
            </Border.Effect>

            <Grid Margin="16,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>


                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="40" Height="40" Background="#4299E1"
                            CornerRadius="10" Margin="0,0,12,0">
                        <TextBlock Text="⚙️" FontSize="22"
                                   HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Atelio"
               FontSize="20"
               FontWeight="Bold"
               Foreground="#1A202C"/>
                        <TextBlock Text="Atelier Manager"
               FontSize="12"
               Foreground="#718096"/>
                    </StackPanel>
                </StackPanel>


                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    
                    

                    <StackPanel Margin="0,0,16,0">
                        <TextBlock Text="Aujourd'hui"
                                   FontSize="11" Foreground="#A0AEC0"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="TodayTextBlock"
                                   FontSize="13" FontWeight="SemiBold"
                                   Foreground="#4A5568"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    

                    <StackPanel Orientation="Horizontal">
                        <Button Width="36" Height="32"
                                Margin="0,0,8,0"
                                ToolTip="Nouvelle facture de vente"
                                Click="QuickNewSalesInvoice_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#3182CE" CornerRadius="6">
                                        <TextBlock Text="➕" FontSize="16"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="White"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Width="36" Height="32"
                                Margin="0,0,8,0"
                                ToolTip="Produits"
                                Click="QuickProducts_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#4A5568" CornerRadius="6">
                                        <TextBlock Text="📦" FontSize="16"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Width="36" Height="32"
                                ToolTip="Clients"
                                Click="QuickClients_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#4A5568" CornerRadius="6">
                                        <TextBlock Text="👥" FontSize="16"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="FullScreenButton"
        Width="32" Height="28"
        Margin="8,0,0,0"
        ToolTip="Plein écran"
        Click="FullScreenButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="#4A5568" CornerRadius="6">
                                        <TextBlock Text="⛶"
                           FontSize="14"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>


                    </StackPanel>
                </StackPanel>


                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="35" Height="35" Background="#EDF2F7"
                            CornerRadius="18" Margin="0,0,10,0">
                        <TextBlock Text="👤" FontSize="18"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Walid" FontSize="13"
                                   FontWeight="SemiBold" Foreground="#2D3748"/>
                        <TextBlock Text="En ligne" FontSize="11" Foreground="#48BB78"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>


        <Grid Grid.Row="1" Grid.Column="0" Background="#1A202C">
            <Grid.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.1"
                                  BlurRadius="10" ShadowDepth="0" Direction="0"/>
            </Grid.Effect>

            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="MENU PRINCIPAL"
                           Foreground="#718096" FontSize="11" FontWeight="Bold"
                           Margin="20,0,0,15"/>

                <Button x:Name="DashboardButton"
                        Style="{StaticResource NavButtonActive}"
                        Click="DashboardButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="32" Height="32" Background="#3182CE"
                                CornerRadius="6" Margin="0,0,12,0">
                            <TextBlock Text="📊" FontSize="16"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Dashboard" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button x:Name="ClientsButton"
                        Style="{StaticResource NavButton}"
                        Click="ClientsButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="32" Height="32" Background="Transparent"
                                CornerRadius="6" Margin="0,0,12,0">
                            <TextBlock Text="👥" FontSize="16"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Clients" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button x:Name="ProductsButton"
                        Style="{StaticResource NavButton}"
                        Click="ProductsButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="32" Height="32" Background="Transparent"
                                CornerRadius="6" Margin="0,0,12,0">
                            <TextBlock Text="📦" FontSize="16"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Produits" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button x:Name="SuppliersButton"
                        Style="{StaticResource NavButton}"
                        Click="SuppliersButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="32" Height="32" Background="Transparent"
                                CornerRadius="6" Margin="0,0,12,0">
                            <TextBlock Text="🏭" FontSize="16"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Fournisseurs" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button x:Name="RawMaterialsButton"
                        Style="{StaticResource NavButton}"
                        Click="RawMaterialsButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="32" Height="32" Background="Transparent"
                                CornerRadius="6" Margin="0,0,12,0">
                            <TextBlock Text="🧵" FontSize="16"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Matières premières" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button x:Name="PurchaseInvoicesButton"
                        Style="{StaticResource NavButton}"
                        Click="PurchaseInvoicesButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="32" Height="32" Background="Transparent"
                                CornerRadius="6" Margin="0,0,12,0">
                            <TextBlock Text="🧾" FontSize="16"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Factures achat" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button x:Name="SalesInvoicesButton"
                        Style="{StaticResource NavButton}"
                        Click="SalesInvoicesButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="32" Height="32" Background="Transparent"
                                CornerRadius="6" Margin="0,0,12,0">
                            <TextBlock Text="🧾" FontSize="16"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Factures vente" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Border Height="1" Background="#2D3748" Margin="20,20,20,20"/>

                <TextBlock Text="AUTRES"
                           Foreground="#718096" FontSize="11" FontWeight="Bold"
                           Margin="20,0,0,15"/>

                <Button Style="{StaticResource NavButton}">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="32" Height="32" Background="Transparent"
                                CornerRadius="6" Margin="0,0,12,0">
                            <TextBlock Text="⚙️" FontSize="16"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Paramètres" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource NavButton}">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="32" Height="32" Background="Transparent"
                                CornerRadius="6" Margin="0,0,12,0">
                            <TextBlock Text="📊" FontSize="16"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Rapports" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <Border VerticalAlignment="Bottom" Margin="15,0,15,20"
                    Background="#2D3748" CornerRadius="8" Padding="12">
                <StackPanel>
                    <TextBlock Text="💡 Astuce du jour" FontSize="11"
                               Foreground="#CBD5E0" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="Utilisez Ctrl+S pour sauvegarder rapidement."
                               FontSize="10" Foreground="#A0AEC0" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="1" Grid.Column="0"
                HorizontalAlignment="Right" Width="1"
                Background="#E2E8F0"/>


        <Grid Grid.Row="1" Grid.Column="1" Background="#F5F7FA">
            <ContentControl x:Name="MainContent" Margin="0"/>
        </Grid>
    </Grid>
</Window>
