<UserControl x:Class="ProManSystem.Views.ProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8FAFC"
             FlowDirection="LeftToRight">

    <UserControl.Resources>

        <!-- Professional Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#059669"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#047857"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#64748B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#475569"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#1E3A8A"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E40AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#F59E0B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D97706"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="6"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CBD5E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#1E3A8A"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08"
                                      BlurRadius="12" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TOP HEADER BAR -->
        <Border Grid.Row="0" Background="#1E3A8A" Padding="20,15">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📦" FontSize="28" Margin="0,0,10,0"/>
                    <TextBlock Text="Gestion des Produits" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                   
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL - Products List -->
            <Border Grid.Column="0" Style="{StaticResource Card}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search & Actions -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBox x:Name="SearchTextBox"
                                 Style="{StaticResource ModernTextBox}"
                                 Margin="0,0,0,12"
                                 Text="Rechercher par code ou nom..."/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="SearchButton"
                                    Content="🔍 Rechercher"
                                    Width="130"
                                    Style="{StaticResource AccentButton}"
                                    Margin="0,0,8,0"
                                    Click="SearchButton_Click"/>

                            <Button x:Name="AddProductButton"
                                    Content="➕ Nouveau"
                                    Width="130"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,0,8,0"
                                    Click="AddProductButton_Click"/>

                            <Button x:Name="RefreshButton"
                                    Content="🔄 Actualiser"
                                    Width="130"
                                    Style="{StaticResource SecondaryButton}"
                                    Click="RefreshButton_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Products DataGrid -->
                    <DataGrid x:Name="ProductsGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              AlternatingRowBackground="#F7FAFC"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#E2E8F0"
                              RowHeight="48"
                              HeadersVisibility="Column"
                              FontSize="13"
                              ColumnHeaderHeight="48"
                              BorderThickness="0"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              SelectionChanged="ProductsGrid_SelectionChanged">

                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#1E3A8A"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Padding" Value="12"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>

                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#DBEAFE"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#93C5FD"/>
                                        <Setter Property="Foreground" Value="#1E293B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>

                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="10,0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="#1E293B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code"
                                                Binding="{Binding CodeProduit}"
                                                Width="90"/>

                            <DataGridTextColumn Header="Nom du Produit"
                                                Binding="{Binding Nom}"
                                                Width="*"/>

                            <DataGridTextColumn Header="Prix (DA)"
                                                Binding="{Binding PrixVente, StringFormat=N2}"
                                                Width="100"/>

                            <DataGridTemplateColumn Header="Actions" Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">

                                            <Button Content="✏️"
                                                    ToolTip="Modifier"
                                                    Style="{StaticResource IconButton}"
                                                    Background="#1E3A8A"
                                                    Click="EditProductButton_Click"
                                                    Tag="{Binding}"/>

                                            <Button Content="🗑️"
                                                    ToolTip="Supprimer"
                                                    Style="{StaticResource IconButton}"
                                                    Background="#EF4444"
                                                    Click="DeleteProductButton_Click"
                                                    Tag="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- GridSplitter -->
            <GridSplitter Grid.Column="1"
                          Width="8"
                          HorizontalAlignment="Stretch"
                          Background="Transparent"
                          ShowsPreview="False"/>

            <!-- RIGHT PANEL - Product Editor -->
            <Border Grid.Column="2" Style="{StaticResource Card}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <!-- Title -->
                        <TextBlock x:Name="EditorTitleTextBlock"
                                   Text="✏️ Éditer le Produit"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#1E293B"
                                   Margin="0,0,0,20"/>

                        <!-- Product Information Card -->
                        <Border Background="#F8FAFC"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16"
                                BorderBrush="#E2E8F0"
                                BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                                    <TextBlock Text="Code Produit"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#64748B"
                                               Margin="0,0,0,6"/>
                                    <TextBox x:Name="CodeTextBox"
                                             Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1">
                                    <TextBlock Text="Nom du Produit"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#64748B"
                                               Margin="0,0,0,6"/>
                                    <TextBox x:Name="NameTextBox"
                                             Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Recipe Section -->
                        <Border Background="White"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,16"
                                BorderBrush="#F59E0B"
                                BorderThickness="2">
                            <StackPanel>
                                <TextBlock Text="🧪 Recette de Production"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#D97706"
                                           Margin="0,0,0,12"/>

                                <DataGrid x:Name="RecipeGrid"
                                          Height="200"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="Horizontal"
                                          HorizontalGridLinesBrush="#E2E8F0"
                                          AlternatingRowBackground="#FFFBEB"
                                          FontSize="12"
                                          RowHeight="40"
                                          ColumnHeaderHeight="42"
                                          BorderThickness="1"
                                          BorderBrush="#FCD34D"
                                          Margin="0,0,0,12">

                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#F59E0B"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="12"/>
                                            <Setter Property="Padding" Value="10,8"/>
                                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>

                                    <DataGrid.Columns>
                                        <DataGridComboBoxColumn Header="Matière Première"
                                                                Width="*"
                                                                SelectedValueBinding="{Binding RawMaterialId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                DisplayMemberPath="Designation"
                                                                SelectedValuePath="Id"/>

                                        <DataGridTextColumn Header="Quantité"
                                                            Binding="{Binding QuantiteNecessaire, Mode=TwoWay, UpdateSourceTrigger=LostFocus, StringFormat=N3}"
                                                            Width="110">
                                            <DataGridTextColumn.EditingElementStyle>
                                                <Style TargetType="TextBox">
                                                    <EventSetter Event="PreviewTextInput" Handler="QuantityTextBox_PreviewTextInput"/>
                                                    <EventSetter Event="LostFocus" Handler="QuantityTextBox_LostFocus"/>
                                                </Style>
                                            </DataGridTextColumn.EditingElementStyle>
                                        </DataGridTextColumn>

                                        <DataGridTemplateColumn Header="Suppr." Width="70">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="🗑️"
                                                            Width="45"
                                                            Height="30"
                                                            Background="#EF4444"
                                                            Foreground="White"
                                                            FontSize="11"
                                                            Cursor="Hand"
                                                            BorderThickness="0"
                                                            Click="DeleteRecipeRowButton_Click">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        CornerRadius="4">
                                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                                      VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="AddRecipeRowButton"
                                            Content="➕ Ajouter Ligne"
                                            Width="150"
                                            Height="36"
                                            Background="#10B981"
                                            Foreground="White"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Cursor="Hand"
                                            BorderThickness="0"
                                            Margin="0,0,10,0"
                                            Click="AddRecipeRowButton_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <Button x:Name="ChooseMaterialButton"
                                            Content="📋 Choisir Matière"
                                            Width="150"
                                            Height="36"
                                            Background="#1E3A8A"
                                            Foreground="White"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Cursor="Hand"
                                            BorderThickness="0"
                                            Click="ChooseMaterialButton_Click">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Pricing Section -->
                        <!-- Pricing Section -->
                        <Border Background="#ECFDF5"
        CornerRadius="8"
        Padding="16"
        Margin="0,0,0,16"
        BorderBrush="#10B981"
        BorderThickness="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                   Text="💰 Tarification"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="#059669"
                   Margin="0,0,0,15"/>

                                <!-- Production Cost -->
                                <Grid Grid.Row="1" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Coût de Production:"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Foreground="#1E293B"
                       VerticalAlignment="Center"/>
                                    <TextBlock x:Name="ProductionCostTextBlock"
                       Grid.Column="1"
                       Text="0.00 DA"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#059669"
                       VerticalAlignment="Center"/>
                                </Grid>

                                <!-- Max Production -->
                                <Grid Grid.Row="2" Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="⚠️ Production Maximum:"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Foreground="#1E293B"
                       VerticalAlignment="Center"/>
                                    <TextBlock x:Name="MaxProductionTextBlock"
                       Grid.Column="1"
                       Text="-- unités"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#F59E0B"
                       VerticalAlignment="Center"/>
                                </Grid>

                                <Separator Grid.Row="3" Margin="0,0,0,15" Background="#CBD5E0"/>

                                <TextBlock Grid.Row="4"
                   Text="Mode de calcul de la marge:"
                   FontSize="13"
                   FontWeight="SemiBold"
                   Foreground="#1E293B"
                   Margin="0,0,0,10"/>

                                <!-- Margin Options Container -->
                                <StackPanel Grid.Row="5" Margin="0,0,0,15">
                                    <!-- Percentage Option -->
                                    <Border Background="White" 
                    CornerRadius="6" 
                    Padding="12"
                    Margin="0,0,0,8"
                    BorderBrush="#CBD5E0"
                    BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <RadioButton x:Name="MarginPercentageRadio"
                                 Grid.Column="0"
                                 Content="Pourcentage"
                                 GroupName="MarginType"
                                 IsChecked="True"
                                 FontSize="13"
                                 FontWeight="SemiBold"
                                 VerticalAlignment="Center"
                                 Margin="0,0,15,0"
                                 Checked="MarginType_Changed"/>

                                            <TextBox x:Name="MarginPercentageTextBox"
                             Grid.Column="1"
                             Width="100"
                             Height="36"
                             Padding="10,0"
                             FontSize="13"
                             Text="30"
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Right"
                             TextChanged="MarginPercentageTextBox_TextChanged"/>

                                            <TextBlock Grid.Column="2"
                               Text=" %"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                                        </Grid>
                                    </Border>

                                    <!-- Fixed Value Option -->
                                    <Border Background="White" 
                    CornerRadius="6" 
                    Padding="12"
                    BorderBrush="#CBD5E0"
                    BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <RadioButton x:Name="MarginFixedRadio"
                                 Grid.Column="0"
                                 Content="Valeur Fixe"
                                 GroupName="MarginType"
                                 FontSize="13"
                                 FontWeight="SemiBold"
                                 VerticalAlignment="Center"
                                 Margin="0,0,15,0"
                                 Checked="MarginType_Changed"/>

                                            <TextBox x:Name="MarginFixedTextBox"
                             Grid.Column="1"
                             Width="100"
                             Height="36"
                             Padding="10,0"
                             FontSize="13"
                             Text="0"
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Right"
                             TextChanged="MarginFixedTextBox_TextChanged"/>

                                            <TextBlock Grid.Column="2"
                               Text=" DA"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <Separator Grid.Row="6" Margin="0,0,0,15" Background="#10B981" Height="2"/>

                                <!-- Final Price -->
                                <Border Grid.Row="7"
                Background="White"
                CornerRadius="6"
                Padding="12"
                BorderBrush="#10B981"
                BorderThickness="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="💵 Prix de Vente Final:"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#1E293B"
                           VerticalAlignment="Center"/>
                                        <TextBox x:Name="FinalPriceTextBox"
                         Grid.Column="1"
                         Width="150"
                         Height="42"
                         Padding="12,0"
                         FontSize="16"
                         FontWeight="Bold"
                         Background="#F0FDF4"
                         BorderBrush="#10B981"
                         BorderThickness="2"
                         VerticalContentAlignment="Center"
                         TextChanged="FinalPrice_Changed"/>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>


                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button x:Name="SaveProductButton"
                                    Content="💾 Enregistrer"
                                    Width="150"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,0,10,0"
                                    Click="SaveProductButton_Click"/>

                            <Button x:Name="CancelEditButton"
                                    Content="❌ Annuler"
                                    Width="120"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="0,0,10,0"
                                    Click="CancelEditButton_Click"/>

                            <Button x:Name="RecalculateButton"
                                    Content="🔄 Recalculer"
                                    Width="130"
                                    Style="{StaticResource WarningButton}"
                                    Click="RecalculateButton_Click"/>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- BOTTOM STATISTICS BAR -->
        <Border Grid.Row="2" Background="#1E3A8A" Padding="20,12">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="TotalProductsText"
                               Text="📊 Total: 0 produits"
                               FontSize="13"
                               Foreground="White"
                               Margin="0,0,25,0"/>
                    <TextBlock x:Name="AverageCostText"
                               Text="💰 Coût Moyen: 0.00 DA"
                               FontSize="13"
                               Foreground="White"
                               Margin="0,0,25,0"/>
                    <TextBlock x:Name="TotalValueText"
                               Text="💵 Valeur Totale: 0.00 DA"
                               FontSize="13"
                               Foreground="White"/>
                </StackPanel>

                <TextBlock x:Name="StatusText"
                           Text="Prêt"
                           FontSize="13"
                           Foreground="#10B981"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Material Selection Popup (Hidden by default) -->
        <Border x:Name="MaterialPopup"
                Grid.RowSpan="3"
                Background="#80000000"
                Visibility="Collapsed">
            <Border Background="White"
                    Width="800"
                    MaxHeight="600"
                    CornerRadius="10"
                    Padding="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.3"
                                      BlurRadius="20" ShadowDepth="5"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="📋 Sélectionner une Matière Première"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               Margin="0,0,0,15"/>

                    <TextBox x:Name="PopupSearchTextBox"
                             Grid.Row="1"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,15"
                             TextChanged="PopupSearch_TextChanged"/>

                    <DataGrid x:Name="PopupMaterialsGrid"
                              Grid.Row="2"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              AlternatingRowBackground="#F7FAFC"
                              FontSize="12"
                              RowHeight="40"
                              ColumnHeaderHeight="42"
                              BorderThickness="1"
                              BorderBrush="#E2E8F0"
                              Margin="0,0,0,15">

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#1E3A8A"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code"
                                                Binding="{Binding CodeMatiere}"
                                                Width="100"/>
                            <DataGridTextColumn Header="Désignation"
                                                Binding="{Binding Designation}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Stock"
                                                Binding="{Binding StockActuel, StringFormat=N2}"
                                                Width="100"/>
                            <DataGridTextColumn Header="Prix (DA)"
                                                Binding="{Binding PMAPA, StringFormat=N2}"
                                                Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="✅ Sélectionner"
                                Width="140"
                                Style="{StaticResource PrimaryButton}"
                                Margin="0,0,10,0"
                                Click="SelectMaterialButton_Click"/>
                        <Button Content="❌ Fermer"
                                Width="120"
                                Style="{StaticResource SecondaryButton}"
                                Click="ClosePopupButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

    </Grid>
</UserControl>
