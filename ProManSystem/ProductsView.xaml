<UserControl x:Class="ProManSystem.Views.ProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#FAFAFA"
             FlowDirection="RightToLeft">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="إدارة المنتجات"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#333333"
                   Margin="0,0,0,15"
                   HorizontalAlignment="Right"/>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="6"
                Padding="10"
                Margin="0,0,0,15"
                BorderBrush="#DDDDDD"
                BorderThickness="1">
            <DockPanel LastChildFill="True">

                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            Margin="0,0,15,0">

                    <Button x:Name="AddProductButton"
                            Content="إضافة منتج جديد"
                            Width="170"
                            Height="38"
                            Background="#4CAF50"
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="0,0,8,0"
                            Cursor="Hand"
                            Click="AddProductButton_Click"/>

                    <Button x:Name="RefreshButton"
                            Content="تحديث"
                            Width="110"
                            Height="38"
                            Background="#2196F3"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="RefreshButton_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Stretch">
                    <TextBox x:Name="SearchTextBox"
                             Height="38"
                             MinWidth="220"
                             VerticalContentAlignment="Center"
                             FontSize="14"
                             Margin="0,0,8,0"
                             HorizontalAlignment="Stretch"/>

                    <Button x:Name="SearchButton"
                            Content="بحث"
                            Width="110"
                            Height="38"
                            Background="#FF9800"
                            Foreground="White"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="SearchButton_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <Border Grid.Row="2"
                Background="White"
                CornerRadius="6"
                Padding="8"
                BorderBrush="#DDDDDD"
                BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="ProductsGrid"
                          Grid.Row="0"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          AlternatingRowBackground="#F5F5F5"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#E0E0E0"
                          RowHeight="40"
                          HeadersVisibility="Column"
                          FontSize="14"
                          ColumnHeaderHeight="40"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          SelectionChanged="ProductsGrid_SelectionChanged">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F0F0F0"/>
                            <Setter Property="Foreground" Value="#333333"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>

                        <Style x:Key="GridActionButtonStyle" TargetType="Button">
                            <Setter Property="Width" Value="70"/>
                            <Setter Property="Height" Value="28"/>
                            <Setter Property="Margin" Value="3,0"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="3"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"
                                                              Margin="2,0,2,0"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="الرقم"
                                            Binding="{Binding Id}"
                                            Width="60"/>

                        <DataGridTextColumn Header="كود المنتج"
                                            Binding="{Binding CodeProduit}"
                                            Width="110"/>

                        <DataGridTextColumn Header="اسم المنتج"
                                            Binding="{Binding Nom}"
                                            Width="200"/>

                        <DataGridTextColumn Header="الوصف"
                                            Binding="{Binding Description}"
                                            Width="*"/>

                        <DataGridTextColumn Header="المخزون"
                                            Binding="{Binding StockActuel}"
                                            Width="90"/>

                        <DataGridTextColumn Header="الحد الأدنى"
                                            Binding="{Binding StockMin}"
                                            Width="100"/>

                        <DataGridTextColumn Header="تكلفة الإنتاج"
                                            Binding="{Binding CoutProduction, StringFormat=N2}"
                                            Width="120"/>

                        <DataGridTextColumn Header="سعر البيع"
                                            Binding="{Binding PrixVente, StringFormat=N2}"
                                            Width="110">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="هامش الربح"
                                            Binding="{Binding Marge, StringFormat=N2}"
                                            Width="110">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTemplateColumn Header="الإجراءات" Width="320">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">

                                        <Button Content="وصفة"
                                                Style="{StaticResource GridActionButtonStyle}"
                                                Background="#8BC34A"
                                                Click="EditRecipeButton_Click"
                                                Tag="{Binding}"/>

                                        <Button Content="إنتاج"
                                                Style="{StaticResource GridActionButtonStyle}"
                                                Background="#9C27B0"
                                                Click="ProduceProductButton_Click"
                                                Tag="{Binding}"/>

                                        <Button Content="تعديل"
                                                Style="{StaticResource GridActionButtonStyle}"
                                                Background="#2196F3"
                                                Click="EditProductButton_Click"
                                                Tag="{Binding}"/>

                                        <Button Content="حذف"
                                                Style="{StaticResource GridActionButtonStyle}"
                                                Background="#F44336"
                                                Click="DeleteProductButton_Click"
                                                Tag="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock Grid.Row="1"
                           Text="تفاصيل المنتج المحدد"
                           FontWeight="Bold"
                           Margin="4,10,4,4"
                           Foreground="#555"
                           HorizontalAlignment="Right"/>

                <Grid Grid.Row="2" Margin="4,0,4,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,2">
                        <TextBlock Text="كود المنتج:" FontWeight="Bold"/>
                        <TextBlock x:Name="DetailCodeTextBlock"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,2">
                        <TextBlock Text="اسم المنتج:" FontWeight="Bold"/>
                        <TextBlock x:Name="DetailNameTextBlock"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,2">
                        <TextBlock Text="تاريخ الإنشاء:" FontWeight="Bold"/>
                        <TextBlock x:Name="DetailDateTextBlock"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,2">
                        <TextBlock Text="المخزون:" FontWeight="Bold"/>
                        <TextBlock x:Name="DetailStockTextBlock"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,2">
                        <TextBlock Text="الحد الأدنى:" FontWeight="Bold"/>
                        <TextBlock x:Name="DetailStockMinTextBlock"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,2">
                        <TextBlock Text="تكلفة الإنتاج:" FontWeight="Bold"/>
                        <TextBlock x:Name="DetailCoutTextBlock"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,2">
                        <TextBlock Text="سعر البيع:" FontWeight="Bold"/>
                        <TextBlock x:Name="DetailPrixTextBlock"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,2">
                        <TextBlock Text="هامش الربح:" FontWeight="Bold"/>
                        <TextBlock x:Name="DetailMargeTextBlock"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,2">
                        <TextBlock Text="الوصف:" FontWeight="Bold"/>
                        <TextBlock x:Name="DetailDescriptionTextBlock"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
